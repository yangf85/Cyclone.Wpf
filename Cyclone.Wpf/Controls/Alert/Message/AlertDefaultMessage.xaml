<UserControl
    x:Class="Cyclone.Wpf.Controls.AlertDefaultMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cyclone.Wpf.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="375"
    Height="160"
    Padding="15"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <TextBox
            Height="Auto"
            Margin="15,0,0,0"
            VerticalAlignment="Center"
            BorderThickness="0"
            Foreground="{DynamicResource Text.Content}"
            IsReadOnly="True"
            Style="{x:Null}"
            Text="{Binding Path=DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}"
            TextWrapping="Wrap" />
    </Grid>
</UserControl>