<UserControl
    x:Class="Cyclone.Wpf.Controls.AlertInformationMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cyclone.Wpf.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="375"
    Height="160"
    Padding="15"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" MaxWidth="300" />
        </Grid.ColumnDefinitions>
        <Path
            Grid.Column="0"
            Width="32"
            Height="32"
            VerticalAlignment="Center"
            Data="M512 0A512 512 0 1 1 512 1024a512 512 0 0 1 0-1024zM564.516571 814.445714l0-438.857143-109.714285 0 0 438.857143 109.714285 0z m-1e-8-621.714285l-109.71428499 0 0 109.714285 109.714285 0-1e-8-109.714285z"
            Fill="{DynamicResource Icon.Foreground.Info}"
            Stretch="Uniform" />
        <TextBox
            Grid.Column="1"
            Height="Auto"
            Margin="15,0,0,0"
            VerticalAlignment="Center"
            BorderThickness="0"
            Foreground="{DynamicResource Text.Content}"
            IsReadOnly="True"
            Style="{x:Null}"
            Text="{Binding Path=DataContext, RelativeSource={RelativeSource AncestorType=UserControl}}"
            TextWrapping="Wrap" />
    </Grid>
</UserControl>