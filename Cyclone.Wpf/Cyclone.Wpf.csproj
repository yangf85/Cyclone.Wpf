    <None Remove="Themes\ResourceKey\**" />
    <Page Remove="Resources\**" />
    <Page Remove="Themes\ResourceKey\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Controls\ColorPicker\ColorBrightSlider.cs" />
