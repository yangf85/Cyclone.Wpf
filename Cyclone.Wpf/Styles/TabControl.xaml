<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:Cyclone.Wpf.Converters"
    xmlns:hp="clr-namespace:Cyclone.Wpf.Helpers">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Cyclone.Wpf;component/Styles/Control.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="TabItem.Style.Vertical" TargetType="TabItem">
        <Setter Property="Background" Value="{DynamicResource Background.Header}" />
        <Setter Property="Foreground" Value="{DynamicResource Foreground.Default}" />
        <Setter Property="Height" Value="{DynamicResource Height.Horizontal.Header}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Border
                        x:Name="RootBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        SnapsToDevicePixels="True">
                        <Grid>
                            <Rectangle
                                x:Name="Indicator"
                                Width="2"
                                HorizontalAlignment="Right"
                                Fill="Transparent" />
                            <Grid Margin="10,0">
                                <ContentPresenter
                                    x:Name="ContentContainer"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    ContentSource="Header"
                                    Focusable="False" />
                            </Grid>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Indicator" Property="Fill" Value="{DynamicResource Border.Selected}" />
                        </Trigger>
                        <DataTrigger Binding="{Binding Path=TabStripPlacement, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TabControl}}" Value="Right">
                            <Setter TargetName="Indicator" Property="HorizontalAlignment" Value="Left" />
                        </DataTrigger>
                        <Trigger SourceName="RootBorder" Property="IsMouseOver" Value="True">
                            <Setter TargetName="RootBorder" Property="Background" Value="{DynamicResource Background.Hover}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="TabItem.Style.Horizontal" TargetType="TabItem">
        <Setter Property="Height" Value="{DynamicResource Height.Horizontal.Header}" />
        <Setter Property="Background" Value="{DynamicResource Background.Header}" />
        <Setter Property="Foreground" Value="{DynamicResource Foreground.Default}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Border
                        x:Name="RootBorder"
                        Padding="15,0"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        SnapsToDevicePixels="True">
                        <Grid>
                            <Rectangle
                                x:Name="Indicator"
                                Height="2"
                                Margin="-15,0"
                                VerticalAlignment="Bottom"
                                Fill="Transparent" />
                            <ContentPresenter
                                x:Name="ContentContainer"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                ContentSource="Header"
                                Focusable="False" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Indicator" Property="Fill" Value="{DynamicResource Border.Selected}" />
                        </Trigger>
                        <DataTrigger Binding="{Binding Path=TabStripPlacement, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=TabControl}}" Value="Bottom">
                            <Setter TargetName="Indicator" Property="VerticalAlignment" Value="Top" />
                        </DataTrigger>
                        <Trigger SourceName="RootBorder" Property="IsMouseOver" Value="True">
                            <Setter TargetName="RootBorder" Property="Background" Value="{DynamicResource Background.Hover}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ControlTemplate x:Key="TabControl.ControlTemplate.Top" TargetType="TabControl">
        <Border
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}"
            SnapsToDevicePixels="True">
            <Grid KeyboardNavigation.TabNavigation="Local">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TabPanel
                    x:Name="HeaderPanel"
                    Grid.Row="0"
                    IsItemsHost="True"
                    KeyboardNavigation.TabIndex="1" />
                <Border Grid.Row="1" Background="{DynamicResource Background.Container}">
                    <ContentPresenter x:Name="PART_SelectedContentHost" ContentSource="SelectedContent" />
                </Border>
            </Grid>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="TabControl.ControlTemplate.Bottom" TargetType="TabControl">
        <Border
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}"
            SnapsToDevicePixels="True">
            <Grid KeyboardNavigation.TabNavigation="Local">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Background="{DynamicResource Background.Container}">
                    <ContentPresenter x:Name="PART_SelectedContentHost" ContentSource="SelectedContent" />
                </Border>
                <TabPanel
                    x:Name="HeaderPanel"
                    Grid.Row="1"
                    IsItemsHost="True"
                    KeyboardNavigation.TabIndex="1" />
            </Grid>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="TabControl.ControlTemplate.Left" TargetType="TabControl">
        <Border
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}"
            SnapsToDevicePixels="True">
            <Grid KeyboardNavigation.TabNavigation="Local">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TabPanel
                    x:Name="HeaderPanel"
                    Grid.Column="0"
                    IsItemsHost="True"
                    KeyboardNavigation.TabIndex="1" />
                <Border Grid.Column="1" Background="{DynamicResource Background.Container}">
                    <ContentPresenter x:Name="PART_SelectedContentHost" ContentSource="SelectedContent" />
                </Border>
            </Grid>
        </Border>
    </ControlTemplate>

    <ControlTemplate x:Key="TabControl.ControlTemplate.Right" TargetType="TabControl">
        <Border
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}"
            SnapsToDevicePixels="True">
            <Grid KeyboardNavigation.TabNavigation="Local">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Border Grid.Column="0" Background="{DynamicResource Background.Container}">
                    <ContentPresenter x:Name="PART_SelectedContentHost" ContentSource="SelectedContent" />
                </Border>
                <TabPanel
                    x:Name="HeaderPanel"
                    Grid.Column="1"
                    IsItemsHost="True"
                    KeyboardNavigation.TabIndex="1" />
            </Grid>
        </Border>
    </ControlTemplate>

    <Style
        x:Key="TabControl.Style.Basic"
        BasedOn="{StaticResource Control.Style.Basic}"
        TargetType="TabControl">
        <Setter Property="BorderBrush" Value="{DynamicResource Border.Default}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="Transparent" />
        <Style.Triggers>
            <Trigger Property="TabStripPlacement" Value="Top">
                <Setter Property="Template" Value="{StaticResource TabControl.ControlTemplate.Top}" />
                <Setter Property="ItemContainerStyle" Value="{StaticResource TabItem.Style.Horizontal}" />
            </Trigger>
            <Trigger Property="TabStripPlacement" Value="Bottom">
                <Setter Property="Template" Value="{StaticResource TabControl.ControlTemplate.Bottom}" />
                <Setter Property="ItemContainerStyle" Value="{StaticResource TabItem.Style.Horizontal}" />
            </Trigger>
            <Trigger Property="TabStripPlacement" Value="Left">
                <Setter Property="Template" Value="{StaticResource TabControl.ControlTemplate.Left}" />
                <Setter Property="ItemContainerStyle" Value="{StaticResource TabItem.Style.Vertical}" />
            </Trigger>
            <Trigger Property="TabStripPlacement" Value="Right">
                <Setter Property="Template" Value="{StaticResource TabControl.ControlTemplate.Right}" />
                <Setter Property="ItemContainerStyle" Value="{StaticResource TabItem.Style.Vertical}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style BasedOn="{StaticResource TabControl.Style.Basic}" TargetType="TabControl" />
</ResourceDictionary>