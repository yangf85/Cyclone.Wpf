<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:ctl="clr-namespace:Cyclone.Wpf.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Cyclone.Wpf;component/Themes/BasicTheme.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type ctl:Drawer}">
        <!--  默认属性设置  -->
        <Setter Property="Background" Value="{DynamicResource Background.Container}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Border.Container}" />
        <Setter Property="BorderThickness" Value="{DynamicResource BorderThickness.Thin}" />
        <Setter Property="Padding" Value="{DynamicResource Padding.All}" />
        <Setter Property="CloseOnOverlayClick" Value="True" />
        <Setter Property="Panel.ZIndex" Value="1000" />

        <!--  控件模板  -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ctl:Drawer}">
                    <Grid>
                        <!--  主内容 - 显示Drawer的Content属性  -->
                        <ContentPresenter Content="{TemplateBinding Content}" />

                        <!--  遮罩层 - 当抽屉打开时显示  -->
                        <Border x:Name="PART_Overlay"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Panel.ZIndex="998"
                                Background="{DynamicResource Background.TransparentMedium}"
                                Opacity="0"
                                Visibility="Collapsed" />

                        <!--  抽屉面板 - 显示DrawerContent属性  -->
                        <Border x:Name="PART_DrawerPanel"
                                Panel.ZIndex="999"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{DynamicResource CornerRadius.Medium}">
                            <!--  抽屉内容  -->
                            <ContentPresenter Margin="{TemplateBinding Padding}" Content="{TemplateBinding DrawerContent}" />
                        </Border>
                    </Grid>

                    <!--  控件触发器  -->
                    <ControlTemplate.Triggers>
                        <!--  根据抽屉位置设置抽屉面板的初始对齐方式  -->
                        <Trigger Property="Placement" Value="Left">
                            <Setter TargetName="PART_DrawerPanel" Property="HorizontalAlignment" Value="Left" />
                            <Setter TargetName="PART_DrawerPanel" Property="VerticalAlignment" Value="Stretch" />
                        </Trigger>
                        <Trigger Property="Placement" Value="Right">
                            <Setter TargetName="PART_DrawerPanel" Property="HorizontalAlignment" Value="Right" />
                            <Setter TargetName="PART_DrawerPanel" Property="VerticalAlignment" Value="Stretch" />
                        </Trigger>
                        <Trigger Property="Placement" Value="Top">
                            <Setter TargetName="PART_DrawerPanel" Property="HorizontalAlignment" Value="Stretch" />
                            <Setter TargetName="PART_DrawerPanel" Property="VerticalAlignment" Value="Top" />
                        </Trigger>
                        <Trigger Property="Placement" Value="Bottom">
                            <Setter TargetName="PART_DrawerPanel" Property="HorizontalAlignment" Value="Stretch" />
                            <Setter TargetName="PART_DrawerPanel" Property="VerticalAlignment" Value="Bottom" />
                        </Trigger>

                        <!--  不再使用触发器控制面板可见性，改为在代码中控制  -->
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>