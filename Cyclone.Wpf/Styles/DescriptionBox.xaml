<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:ctl="clr-namespace:Cyclone.Wpf.Controls">
	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="pack://application:,,,/Cyclone.Wpf;component/Themes/BasicTheme.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<Style TargetType="{x:Type ctl:DescriptionItem}">
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ctl:DescriptionItem}">
					<Border
						x:Name="RootBorder"
						Padding="{TemplateBinding Padding}"
						Background="{TemplateBinding Background}"
						BorderBrush="{TemplateBinding BorderBrush}"
						BorderThickness="{TemplateBinding BorderThickness}">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" SharedSizeGroup="{TemplateBinding LabelSharedSizeGroup}" />
								<ColumnDefinition Width="*" />
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" SharedSizeGroup="{TemplateBinding DescriptionSharedSizeGroup}" />
							</Grid.RowDefinitions>

							<TextBlock
								Grid.Row="0"
								Margin="0,0,0,2"
								FontWeight="Bold"
								Foreground="{DynamicResource Text.Header}"
								Text="{TemplateBinding Label}" />
							<ContentPresenter
								Grid.Row="0"
								Grid.Column="1"
								HorizontalAlignment="Left"
								VerticalAlignment="Center"
								Content="{TemplateBinding Value}" />
							<TextBlock
								Grid.Row="1"
								Grid.Column="0"
								Grid.ColumnSpan="2"
								FontSize="12"
								FontStyle="Italic"
								Foreground="{DynamicResource Text.Prompt}"
								Text="{TemplateBinding Description}"
								TextWrapping="WrapWithOverflow" />
						</Grid>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!--  DescriptionBox样式和模板  -->
	<Style TargetType="{x:Type ctl:DescriptionBox}">
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="HorizontalContentAlignment" Value="Stretch" />
		<Setter Property="VerticalContentAlignment" Value="Stretch" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type ctl:DescriptionBox}">
					<Border
						x:Name="RootBorder"
						Padding="{TemplateBinding Padding}"
						Background="{TemplateBinding Background}"
						BorderBrush="{TemplateBinding BorderBrush}"
						BorderThickness="{TemplateBinding BorderThickness}">
						<Grid
							x:Name="PART_ItemsContainer"
							IsItemsHost="True"
							ShowGridLines="True" />
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>