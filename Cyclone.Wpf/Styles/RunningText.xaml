<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctl="clr-namespace:Cyclone.Wpf.Controls">

    <ControlTemplate x:Key="Template.Horizontal" TargetType="{x:Type ctl:RunningText}">
        <Border
            Padding="{TemplateBinding Padding}"
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}"
            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
            <Canvas
                x:Name="PART_Canvas"
                Height="{Binding ActualHeight, ElementName=PART_Txt1}"
                VerticalAlignment="Center"
                ClipToBounds="{TemplateBinding ClipToBounds}">
                <TextBlock x:Name="PART_Txt1" Text="{TemplateBinding Text}" />
                <TextBlock x:Name="PART_Txt2" Text="{TemplateBinding Text}" />
            </Canvas>
        </Border>
    </ControlTemplate>
    <ControlTemplate x:Key="Template.Vertical" TargetType="{x:Type ctl:RunningText}">
        <Border
            Padding="{TemplateBinding Padding}"
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}"
            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
            <Canvas
                x:Name="PART_Canvas"
                MinWidth="{TemplateBinding FontSize}"
                HorizontalAlignment="Center"
                ClipToBounds="{TemplateBinding ClipToBounds}">
                <TextBlock
                    x:Name="PART_Txt1"
                    MaxWidth="{Binding ActualWidth, ElementName=PART_Canvas}"
                    Text="{TemplateBinding Text}"
                    TextWrapping="Wrap" />
                <TextBlock
                    x:Name="PART_Txt2"
                    MaxWidth="{Binding ActualWidth, ElementName=PART_Canvas}"
                    Text="{TemplateBinding Text}"
                    TextWrapping="Wrap" />
            </Canvas>
        </Border>
    </ControlTemplate>

    <Style TargetType="{x:Type ctl:RunningText}">
        <Setter Property="Padding" Value="6,3" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="IsHitTestVisible" Value="False" />
        <Setter Property="ClipToBounds" Value="True" />
        <Style.Triggers>
            <Trigger Property="Direction" Value="RightToLeft">
                <Setter Property="Template" Value="{StaticResource Template.Horizontal}" />
            </Trigger>
            <Trigger Property="Direction" Value="LeftToRight">
                <Setter Property="Template" Value="{StaticResource Template.Horizontal}" />
            </Trigger>
            <Trigger Property="Direction" Value="BottomToTop">
                <Setter Property="Template" Value="{StaticResource Template.Vertical}" />
            </Trigger>
            <Trigger Property="Direction" Value="TopToBottom">
                <Setter Property="Template" Value="{StaticResource Template.Vertical}" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>