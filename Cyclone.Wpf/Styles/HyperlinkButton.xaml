<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctl="clr-namespace:Cyclone.Wpf.Controls">
    <ResourceDictionary.MergedDictionaries>
        <!--<ResourceDictionary Source="pack://application:,,,/Cyclone.Wpf;component/Resources/CommonResources.xaml" />-->
    </ResourceDictionary.MergedDictionaries>

    <ControlTemplate x:Key="BasicHyperlinkButtonControlTemplate" TargetType="ctl:HyperlinkButton">
        <Button x:Name="PART_NavigationButton" Command="{x:Static ctl:HyperlinkButton.OpenUrlCommand}">
            <TextBlock x:Name="PART_DisplayTextBlock" Text="{TemplateBinding DisplayText}" />
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <ContentPresenter
                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                        Content="{TemplateBinding Content}" />
                </ControlTemplate>
            </Button.Template>
        </Button>
        <ControlTemplate.Triggers>
            <Trigger SourceName="PART_DisplayTextBlock" Property="IsMouseOver" Value="True">
                <Setter TargetName="PART_DisplayTextBlock" Property="TextBlock.TextDecorations" Value="Underline" />
                <Setter TargetName="PART_DisplayTextBlock" Property="Cursor" Value="Hand" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style TargetType="{x:Type ctl:HyperlinkButton}">
        <Setter Property="Template" Value="{StaticResource BasicHyperlinkButtonControlTemplate}" />
        <Setter Property="ToolTip" Value="{Binding Path=NavigateUri.AbsoluteUri, RelativeSource={RelativeSource Mode=Self}}" />
        <Setter Property="ToolTipService.InitialShowDelay" Value="100" />
    </Style>
</ResourceDictionary>