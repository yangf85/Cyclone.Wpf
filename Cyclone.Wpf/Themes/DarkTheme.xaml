<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Cyclone.Wpf;component/Themes/Color.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  ==================== 核心颜色 - 背景色 ====================  -->
    <SolidColorBrush x:Key="Background.Global" Color="{StaticResource GrayDarken4}" />
    <SolidColorBrush x:Key="Background.Default" Color="{StaticResource GrayDarken3}" />
    <SolidColorBrush x:Key="Background.Active" Color="{StaticResource BlueDarken2}" />
    <SolidColorBrush x:Key="Background.Inactive" Color="{StaticResource GrayDarken2}" />
    <SolidColorBrush x:Key="Background.Disabled" Color="{StaticResource GrayDarken1}" />
    <SolidColorBrush x:Key="Background.Hover" Color="{StaticResource BlueDarken3}" />
    <SolidColorBrush x:Key="Background.Pressed" Color="{StaticResource BlueDarken4}" />
    <SolidColorBrush x:Key="Background.Checked" Color="{StaticResource BlueDarken2}" />
    <SolidColorBrush x:Key="Background.Focused" Color="{StaticResource BlueDarken3}" />
    <SolidColorBrush x:Key="Background.Highlighted" Color="{StaticResource BlueDarken1}" />
    <SolidColorBrush x:Key="Background.Editing" Color="{StaticResource GrayDarken3}" />
    <SolidColorBrush x:Key="Background.Loading" Color="{StaticResource GrayDarken2}" />
    <SolidColorBrush x:Key="Background.Dragging" Color="{StaticResource BlueDarken4}" />
    <SolidColorBrush x:Key="Background.Selected" Color="{StaticResource BlueDarken1}" />
    <SolidColorBrush x:Key="Background.InputError" Color="{StaticResource RedDarken5}" />
    <SolidColorBrush x:Key="Background.Warning" Color="{StaticResource OrangeDarken3}" />
    <SolidColorBrush x:Key="Background.Error" Color="{StaticResource RedDarken3}" />
    <SolidColorBrush x:Key="Background.Success" Color="{StaticResource GreenDarken1}" />
    <SolidColorBrush x:Key="Background.Info" Color="{StaticResource BlueDarken2}" />
    <SolidColorBrush x:Key="Background.Close" Color="{StaticResource RedDarken2}" />
    <SolidColorBrush x:Key="Background.Mask" Color="{StaticResource TransparentColor}" />
    <SolidColorBrush x:Key="Background.Container" Color="{StaticResource GrayDarken4}" />
    <SolidColorBrush x:Key="Background.Header" Color="{StaticResource BlueDarken3}" />
    <SolidColorBrush x:Key="Background.Caption" Color="{StaticResource BlueDarken4}" />
    <SolidColorBrush x:Key="Background.Transition" Color="{StaticResource GrayDarken3}" />

    <!--  ==================== 核心颜色 - 前景色 ====================  -->
    <SolidColorBrush x:Key="Foreground.Global" Color="{StaticResource GrayLighten4}" />
    <SolidColorBrush x:Key="Foreground.Default" Color="{StaticResource GrayLighten4}" />
    <SolidColorBrush x:Key="Foreground.Active" Color="{StaticResource GrayLighten4}" />
    <SolidColorBrush x:Key="Foreground.Inactive" Color="{StaticResource GrayLighten2}" />
    <SolidColorBrush x:Key="Foreground.Disabled" Color="{StaticResource GrayLighten1}" />
    <SolidColorBrush x:Key="Foreground.Hover" Color="{StaticResource BlueLighten3}" />
    <SolidColorBrush x:Key="Foreground.Pressed" Color="{StaticResource BlueLighten3}" />
    <SolidColorBrush x:Key="Foreground.Checked" Color="{StaticResource BlueLighten3}" />
    <SolidColorBrush x:Key="Foreground.Focused" Color="{StaticResource BlueLighten3}" />
    <SolidColorBrush x:Key="Foreground.Highlighted" Color="{StaticResource GrayLighten4}" />
    <SolidColorBrush x:Key="Foreground.Editing" Color="{StaticResource BlueLighten3}" />
    <SolidColorBrush x:Key="Foreground.Loading" Color="{StaticResource GrayLighten1}" />
    <SolidColorBrush x:Key="Foreground.Dragging" Color="{StaticResource GrayLighten4}" />
    <SolidColorBrush x:Key="Foreground.Selected" Color="{StaticResource GrayLighten4}" />
    <SolidColorBrush x:Key="Foreground.InputError" Color="{StaticResource RedLighten3}" />
    <SolidColorBrush x:Key="Foreground.Warning" Color="{StaticResource OrangeLighten3}" />
    <SolidColorBrush x:Key="Foreground.Error" Color="{StaticResource RedLighten3}" />
    <SolidColorBrush x:Key="Foreground.Success" Color="{StaticResource GreenLighten3}" />
    <SolidColorBrush x:Key="Foreground.Info" Color="{StaticResource BlueLighten3}" />
    <SolidColorBrush x:Key="Foreground.Close" Color="{StaticResource RedLighten3}" />
    <SolidColorBrush x:Key="Foreground.Invert" Color="{StaticResource GrayDarken4}" />
    <SolidColorBrush x:Key="Foreground.Container" Color="{StaticResource GrayLighten3}" />
    <SolidColorBrush x:Key="Foreground.Header" Color="{StaticResource GrayLighten4}" />
    <SolidColorBrush x:Key="Foreground.Caption" Color="{StaticResource GrayLighten4}" />
    <SolidColorBrush x:Key="Foreground.Mask" Color="{StaticResource GrayLighten4}" />
    <SolidColorBrush x:Key="Foreground.Link" Color="{StaticResource BlueLighten3}" />
    <SolidColorBrush x:Key="Foreground.Placeholder" Color="{StaticResource GrayLighten2}" />
    <SolidColorBrush x:Key="Foreground.Transition" Color="{StaticResource GrayLighten4}" />

    <!--  ==================== 核心颜色 - 边框色 ====================  -->
    <SolidColorBrush x:Key="Border.Global" Color="{StaticResource GrayDarken1}" />
    <SolidColorBrush x:Key="Border.Default" Color="{StaticResource GrayDarken1}" />
    <SolidColorBrush x:Key="Border.Active" Color="{StaticResource BlueDarken2}" />
    <SolidColorBrush x:Key="Border.Inactive" Color="{StaticResource GrayDarken1}" />
    <SolidColorBrush x:Key="Border.Disabled" Color="{StaticResource GrayDarken2}" />
    <SolidColorBrush x:Key="Border.Hover" Color="{StaticResource BlueDarken2}" />
    <SolidColorBrush x:Key="Border.Pressed" Color="{StaticResource BlueDarken2}" />
    <SolidColorBrush x:Key="Border.Checked" Color="{StaticResource BlueDarken2}" />
    <SolidColorBrush x:Key="Border.Focused" Color="{StaticResource BlueDarken2}" />
    <SolidColorBrush x:Key="Border.Highlighted" Color="{StaticResource BlueDarken2}" />
    <SolidColorBrush x:Key="Border.Editing" Color="{StaticResource BlueDarken2}" />
    <SolidColorBrush x:Key="Border.Loading" Color="{StaticResource GrayDarken2}" />
    <SolidColorBrush x:Key="Border.Dragging" Color="{StaticResource BlueDarken4}" />
    <SolidColorBrush x:Key="Border.Selected" Color="{StaticResource BlueDarken2}" />
    <SolidColorBrush x:Key="Border.InputError" Color="{StaticResource RedDarken1}" />
    <SolidColorBrush x:Key="Border.Warning" Color="{StaticResource OrangeDarken1}" />
    <SolidColorBrush x:Key="Border.Error" Color="{StaticResource RedDarken1}" />
    <SolidColorBrush x:Key="Border.Success" Color="{StaticResource GreenDarken1}" />
    <SolidColorBrush x:Key="Border.Info" Color="{StaticResource BlueDarken2}" />
    <SolidColorBrush x:Key="Border.Close" Color="{StaticResource RedDarken2}" />
    <SolidColorBrush x:Key="Border.Container" Color="{StaticResource GrayDarken1}" />
    <SolidColorBrush x:Key="Border.Header" Color="{StaticResource BlueDarken2}" />
    <SolidColorBrush x:Key="Border.Caption" Color="{StaticResource GrayDarken1}" />
    <SolidColorBrush x:Key="Border.Mask" Color="{StaticResource GrayDarken1}" />
    <SolidColorBrush x:Key="Border.Transition" Color="{StaticResource GrayDarken3}" />
    <SolidColorBrush x:Key="Border.FocusRing" Color="{StaticResource BlueDarken2}" />

    <!--  ==================== 功能颜色 ====================  -->
    <SolidColorBrush x:Key="Divider.Default" Color="{StaticResource GrayDarken2}" />
    <SolidColorBrush x:Key="Overlay.Light" Color="{StaticResource GrayDarken3}" />
    <SolidColorBrush x:Key="Overlay.Dark" Color="{StaticResource TransparentColor}" />
    <SolidColorBrush x:Key="Link.Default" Color="{StaticResource BlueLighten3}" />
    <SolidColorBrush x:Key="Link.Hover" Color="{StaticResource BlueLighten4}" />
    <SolidColorBrush x:Key="Tick.Primary" Color="{StaticResource BlueLighten3}" />
    <SolidColorBrush x:Key="Tick.Secondary" Color="{StaticResource BlueLighten2}" />
    <SolidColorBrush x:Key="Alternation.Dark" Color="{StaticResource GrayDarken3}" />
    <SolidColorBrush x:Key="Alternation.Light" Color="{StaticResource GrayDarken4}" />

    <!--  ==================== 文本颜色 ====================  -->
    <SolidColorBrush x:Key="Text.Title" Color="{StaticResource GrayLighten4}" />
    <SolidColorBrush x:Key="Text.Subtitle" Color="{StaticResource GrayLighten3}" />
    <SolidColorBrush x:Key="Text.Header" Color="{StaticResource GrayLighten1}" />
    <SolidColorBrush x:Key="Text.Caption" Color="{StaticResource GrayLighten1}" />
    <SolidColorBrush x:Key="Text.Content" Color="{StaticResource GrayLighten2}" />
    <SolidColorBrush x:Key="Text.Prompt" Color="{StaticResource GrayLighten2}" />
    <SolidColorBrush x:Key="Text.Invert" Color="{StaticResource GrayDarken4}" />

    <!--  ==================== 图标颜色 ====================  -->
    <SolidColorBrush x:Key="Icon.Foreground.Default" Color="{StaticResource GrayLighten1}" />
    <SolidColorBrush x:Key="Icon.Foreground.Hover" Color="{StaticResource BlueLighten1}" />
    <SolidColorBrush x:Key="Icon.Foreground.Checked" Color="{StaticResource BlueLighten2}" />
    <SolidColorBrush x:Key="Icon.Foreground.Focused" Color="{StaticResource BlueLighten1}" />
    <SolidColorBrush x:Key="Icon.Foreground.Selected" Color="{StaticResource BlueLighten2}" />
    <SolidColorBrush x:Key="Icon.Foreground.Pressed" Color="{StaticResource BlueLighten4}" />
    <SolidColorBrush x:Key="Icon.Foreground.Editing" Color="{StaticResource BlueLighten1}" />
    <SolidColorBrush x:Key="Icon.Foreground.Dragging" Color="{StaticResource BlueLighten4}" />
    <SolidColorBrush x:Key="Icon.Foreground.Success" Color="{StaticResource GreenLighten3}" />
    <SolidColorBrush x:Key="Icon.Foreground.Error" Color="{StaticResource RedLighten3}" />
    <SolidColorBrush x:Key="Icon.Foreground.Warning" Color="{StaticResource OrangeLighten3}" />
    <SolidColorBrush x:Key="Icon.Foreground.Info" Color="{StaticResource BlueLighten3}" />
    <SolidColorBrush x:Key="Icon.Foreground.Disabled" Color="{StaticResource GrayLighten1}" />
    <SolidColorBrush x:Key="Icon.Foreground.Link" Color="{StaticResource BlueLighten3}" />
    <SolidColorBrush x:Key="Icon.Foreground.Invert" Color="{StaticResource GrayDarken4}" />

    <!--  ==================== 阴影/高光 ====================  -->
    <SolidColorBrush x:Key="Shadow.Default" Color="{StaticResource TransparentColor}" />
    <SolidColorBrush x:Key="Highlight.Default" Color="#20000000" />
    <SolidColorBrush x:Key="Highlight.Invert" Color="#20FFFFFF" />

    <!--  ==================== 尺寸 ====================  -->
    <sys:Double x:Key="Height.Horizontal.Caption">36</sys:Double>
    <sys:Double x:Key="Height.Horizontal.Header">32</sys:Double>
    <sys:Double x:Key="Height.Horizontal.Control">28</sys:Double>
    <sys:Double x:Key="Height.Horizontal.Item">26</sys:Double>

    <sys:Double x:Key="Width.Vertical.Caption">40</sys:Double>
    <sys:Double x:Key="Width.Vertical.Header">36</sys:Double>
    <sys:Double x:Key="Width.Vertical.Control">32</sys:Double>
    <sys:Double x:Key="Width.Vertical.Item">30</sys:Double>

    <sys:Double x:Key="Font.Title">24</sys:Double>
    <sys:Double x:Key="Font.Subtitle">20</sys:Double>
    <sys:Double x:Key="Font.Header">18</sys:Double>
    <sys:Double x:Key="Font.Body">14</sys:Double>
    <sys:Double x:Key="Font.Input">14</sys:Double>
    <sys:Double x:Key="Font.Prompt">13</sys:Double>

    <Thickness x:Key="Margin.Left">5,0,0,0</Thickness>
    <Thickness x:Key="Margin.Right">0,0,5,0</Thickness>
    <Thickness x:Key="Margin.Top">0,5,0,0</Thickness>
    <Thickness x:Key="Margin.Bottom">0,0,0,5</Thickness>
    <Thickness x:Key="Margin.Horizontal">5,0</Thickness>
    <Thickness x:Key="Margin.Vertical">0,5</Thickness>
    <Thickness x:Key="Margin.All">5</Thickness>

    <Thickness x:Key="Padding.Left">5,0,0,0</Thickness>
    <Thickness x:Key="Padding.Right">0,0,5,0</Thickness>
    <Thickness x:Key="Padding.Top">0,5,0,0</Thickness>
    <Thickness x:Key="Padding.Bottom">0,0,0,5</Thickness>
    <Thickness x:Key="Padding.Horizontal">5,0</Thickness>
    <Thickness x:Key="Padding.Vertical">0,5</Thickness>
    <Thickness x:Key="Padding.All">5</Thickness>

    <Thickness x:Key="BorderThickness.None">0</Thickness>
    <Thickness x:Key="BorderThickness.Thin">1</Thickness>
    <Thickness x:Key="BorderThickness.Medium">2</Thickness>
    <Thickness x:Key="BorderThickness.Thick">3</Thickness>

    <CornerRadius x:Key="CornerRadius.None">0</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Small">1</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Medium">3</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Large">5</CornerRadius>

    <sys:Double x:Key="Spacing.Horizontal">5</sys:Double>
    <sys:Double x:Key="Spacing.Vertical">5</sys:Double>

    <sys:Double x:Key="Icon.Small">14</sys:Double>
    <sys:Double x:Key="Icon.Medium">18</sys:Double>
    <sys:Double x:Key="Icon.Large">22</sys:Double>
</ResourceDictionary>