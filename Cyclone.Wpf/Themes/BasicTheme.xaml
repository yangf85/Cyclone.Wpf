    <SolidColorBrush x:Key="Highlight.Invert" Color="{StaticResource Black}" />

    <!--  ==================== 尺寸 ====================  -->
    <!--  高度设置 - 增加了4-8像素  -->
    <sys:Double x:Key="Height.Horizontal.Caption">40</sys:Double>
    <sys:Double x:Key="Height.Horizontal.Header">36</sys:Double>
    <sys:Double x:Key="Height.Horizontal.Control">32</sys:Double>
    <sys:Double x:Key="Height.Horizontal.Item">28</sys:Double>

    <!--  宽度设置 - 增加了4-8像素  -->
    <sys:Double x:Key="Width.Vertical.Caption">48</sys:Double>
    <sys:Double x:Key="Width.Vertical.Header">40</sys:Double>
    <sys:Double x:Key="Width.Vertical.Control">36</sys:Double>
    <sys:Double x:Key="Width.Vertical.Item">32</sys:Double>

    <!--  字体大小 - 保持不变或稍微增加  -->
    <sys:Double x:Key="Font.Title">16</sys:Double>
    <sys:Double x:Key="Font.Subtitle">15</sys:Double>
    <sys:Double x:Key="Font.Header">14</sys:Double>
    <sys:Double x:Key="Font.Body">12</sys:Double>
    <sys:Double x:Key="Font.Input">12</sys:Double>
    <sys:Double x:Key="Font.Prompt">11</sys:Double>

    <!--  Margin - 从4增加到8 (基础单位)  -->
    <Thickness x:Key="Margin.Left">8,4,4,4</Thickness>
    <Thickness x:Key="Margin.Right">4,4,8,4</Thickness>
    <Thickness x:Key="Margin.Top">4,8,4,4</Thickness>
    <Thickness x:Key="Margin.Bottom">4,4,4,8</Thickness>
    <Thickness x:Key="Margin.Horizontal">8,4</Thickness>
    <Thickness x:Key="Margin.Vertical">4,8</Thickness>
    <Thickness x:Key="Margin.All">8</Thickness>

    <!--  Padding - 从4增加到8  -->
    <Thickness x:Key="Padding.Left">8,4,4,4</Thickness>
    <Thickness x:Key="Padding.Right">4,4,8,4</Thickness>
    <Thickness x:Key="Padding.Top">4,8,4,4</Thickness>
    <Thickness x:Key="Padding.Bottom">4,4,4,8</Thickness>
    <Thickness x:Key="Padding.Horizontal">8,4</Thickness>
    <Thickness x:Key="Padding.Vertical">4,8</Thickness>
    <Thickness x:Key="Padding.All">8</Thickness>

    <!--  BorderThickness - 保持不变  -->
    <Thickness x:Key="BorderThickness.None">0</Thickness>
    <Thickness x:Key="BorderThickness.Thin">1</Thickness>
    <Thickness x:Key="BorderThickness.Medium">2</Thickness>
    <Thickness x:Key="BorderThickness.Thick">3</Thickness>

    <!--  CornerRadius - 稍微增加  -->
    <CornerRadius x:Key="CornerRadius.None">0</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Small">2</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Medium">4</CornerRadius>
    <CornerRadius x:Key="CornerRadius.Large">8</CornerRadius>

    <!--  Spacing - 从4增加到8 (基础单位)  -->
    <sys:Double x:Key="Spacing.Horizontal">8</sys:Double>
    <sys:Double x:Key="Spacing.Vertical">8</sys:Double>

    <!--  Icon - 增加尺寸  -->
    <sys:Double x:Key="Icon.Small">16</sys:Double>
    <sys:Double x:Key="Icon.Medium">20</sys:Double>
    <sys:Double x:Key="Icon.Large">24</sys:Double>
</ResourceDictionary>