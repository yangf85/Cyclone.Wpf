    <SolidColorBrush x:Key="Overlay.Dark" Color="{StaticResource TransparentColor}" />
    <SolidColorBrush x:Key="Link.Default" Color="{StaticResource BlueDarken3}" />
    <SolidColorBrush x:Key="Link.Hover" Color="{StaticResource BlueDarken4}" />
