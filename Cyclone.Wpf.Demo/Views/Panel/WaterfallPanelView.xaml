<UserControl x:Class="Cyclone.Wpf.Demo.Views.WaterfallPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Cyclone.Wpf.Demo.Views"
             xmlns:cy="https://www.cyclone/wpf"
             d:DesignHeight="450"
             d:DataContext="{d:DesignInstance Type=local:WaterfallPanelViewModel}"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <ItemsControl x:Name="items"
                      ItemsSource="{Binding Data}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid Background="{Binding Background}">
                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Center"
                                       Foreground="White"
                                       Text="{Binding FirstName}" />
                            <TextBlock HorizontalAlignment="Center"
                                       Foreground="White"
                                       Text="{Binding City}" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>

            <ItemsControl.Template>
                <ControlTemplate TargetType="ItemsControl">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ScrollViewer x:Name="scrollViewer"
                                      CanContentScroll="True"
                                      HorizontalScrollBarVisibility="Visible"
                                      VerticalScrollBarVisibility="Visible">
                            <ItemsPresenter />
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </ItemsControl.Template>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <cy:WaterfallPanel Orientation="Vertical"
                                       Columns="5"
                                       FillLastItem="True"
                                       Spacing="5"
                                       MinItemSize="100"
                                       MaxItemSize="200" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</UserControl>