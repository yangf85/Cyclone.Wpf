<UserControl
    x:Class="Cyclone.Wpf.Demo.Views.SpacingStackPanelView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cy="https://www.cyclone/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hp="clr-namespace:Cyclone.Wpf.Demo.Helper"
    xmlns:local="clr-namespace:Cyclone.Wpf.Demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:SpacingStackPanelViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock
                Margin="0,0,0,10"
                FontWeight="Bold"
                Text="案例1: 水平布局权重分配" />
            <Border
                Padding="10"
                BorderBrush="Gray"
                BorderThickness="1">
                <cy:SpacingStackPanel
                    Height="40"
                    Orientation="Horizontal"
                    Spacing="10">
                    <Button
                        cy:SpacingStackPanel.Weight="Auto"
                        Background="LightBlue"
                        Content="Auto" />
                    <Button
                        cy:SpacingStackPanel.Weight="120"
                        Background="LightGreen"
                        Content="固定120px" />
                    <Button
                        cy:SpacingStackPanel.Weight="1*"
                        Background="LightCoral"
                        Content="1*" />
                    <Button
                        cy:SpacingStackPanel.Weight="2*"
                        Background="LightYellow"
                        Content="2*" />
                </cy:SpacingStackPanel>
            </Border>
            <TextBlock
                Margin="0,5,0,0"
                FontSize="12"
                Foreground="Gray"
                Text="说明：Auto按钮自适应内容，固定120px按钮占120像素，1*和2*按钮按1:2比例分配剩余空间" />
        </StackPanel>

        <cy:SpacingStackPanel
            Grid.Row="1"
            Orientation="Vertical"
            Spacing="5">
            <cy:FormItem Label="姓名:" SharedName="Model">
                <TextBox />
            </cy:FormItem>
            <cy:FormItem
                Description="请输入年龄..."
                Label="年龄:"
                SharedName="Model">
                <cy:NumberBox />
            </cy:FormItem>
            <cy:FormItem
                VerticalContentAlignment="Center"
                Label="状态:"
                SharedName="Model">
                <cy:EnumSelector EnumType="{x:Type hp:UserStatus}" Rows="1" />
            </cy:FormItem>
            <TextBox />
        </cy:SpacingStackPanel>
    </Grid>
</UserControl>