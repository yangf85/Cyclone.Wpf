<UserControl
    x:Class="Cyclone.Wpf.Demo.Views.TilePanelView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cy="https://www.cyclone/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cyclone.Wpf.Demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:TilePanelViewModel}"
    d:DesignHeight="700"
    d:DesignWidth="900"
    mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!--  案例1: 固定网格磁贴布局  -->
            <StackPanel Margin="0,0,0,30">
                <TextBlock
                    Margin="0,0,0,10"
                    FontWeight="Bold"
                    Text="案例1: 固定网格磁贴布局 (6行8列)" />
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="12"
                    Foreground="Gray"
                    Text="智能分配1x1, 2x1, 1x2, 2x2等不同大小的磁贴，大磁贴均匀分布" />
                <Border
                    Width="800"
                    Height="300"
                    Padding="10"
                    BorderBrush="Gray"
                    BorderThickness="1">
                    <ItemsControl ItemsSource="{Binding FixedGridItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border
                                    Margin="1"
                                    Background="{Binding Background}"
                                    CornerRadius="4">
                                    <Grid>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Foreground="White"
                                            Text="{Binding Content}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <cy:TilePanel
                                    Columns="8"
                                    MaxColumnSpan="3"
                                    MaxRowSpan="3"
                                    Rows="6"
                                    Spacing="4" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </Border>
            </StackPanel>

            <!--  案例2: 自适应填充磁贴布局  -->
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,10"
                    FontWeight="Bold"
                    Text="案例2: 自适应填充磁贴布局 (IsAutoFill=True)" />
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="12"
                    Foreground="Gray"
                    Text="自动调整网格大小并填充空白区域，磁贴会扩展以占用所有可用空间" />
                <Border
                    Height="280"
                    Padding="10"
                    BorderBrush="Gray"
                    BorderThickness="1">
                    <ItemsControl ItemsSource="{Binding AutoFillItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding Background}" CornerRadius="6">
                                    <Grid>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Foreground="White"
                                            Text="{Binding Content}" />
                                        <!--  显示功能图标  -->
                                        <TextBlock
                                            Margin="8,6,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            FontSize="20"
                                            Foreground="White"
                                            Opacity="0.8"
                                            Text="{Binding Icon}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <cy:TilePanel
                                    Columns="6"
                                    IsAutoFill="True"
                                    MaxColumnSpan="4"
                                    MaxRowSpan="4"
                                    Rows="5"
                                    Spacing="6" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>