<UserControl
    x:Class="Cyclone.Wpf.Demo.Views.SpacingUniformGridView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cy="https://www.cyclone/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cyclone.Wpf.Demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:SpacingUniformGridViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!--  案例1: 基础网格布局 - 展示间距特性  -->
            <StackPanel Margin="0,0,0,30">
                <TextBlock
                    Margin="0,0,0,10"
                    FontWeight="Bold"
                    Text="案例1: 基础网格布局 (3行4列，带间距)" />
                <Border
                    Padding="15"
                    BorderBrush="Gray"
                    BorderThickness="1">
                    <cy:SpacingUniformGrid
                        Columns="4"
                        HorizontalSpacing="10"
                        Rows="3"
                        VerticalSpacing="8">
                        <Button
                            Height="40"
                            Background="LightBlue"
                            Content="1" />
                        <Button
                            Height="40"
                            Background="LightGreen"
                            Content="2" />
                        <Button
                            Height="40"
                            Background="LightCoral"
                            Content="3" />
                        <Button
                            Height="40"
                            Background="LightYellow"
                            Content="4" />
                        <Button
                            Height="40"
                            Background="LightPink"
                            Content="5" />
                        <Button
                            Height="40"
                            Background="LightGray"
                            Content="6" />
                        <Button
                            Height="40"
                            Background="LightCyan"
                            Content="7" />
                        <Button
                            Height="40"
                            Background="Wheat"
                            Content="8" />
                        <Button
                            Height="40"
                            Background="LightSalmon"
                            Content="9" />
                        <Button
                            Height="40"
                            Background="PaleGreen"
                            Content="10" />
                    </cy:SpacingUniformGrid>
                </Border>
                <TextBlock
                    Margin="0,5,0,0"
                    FontSize="12"
                    Foreground="Gray"
                    Text="说明：所有元素大小相同，水平间距10px，垂直间距8px，均匀分布" />
            </StackPanel>

            <!--  案例2: 水平堆叠模式 - 展示不同列宽  -->
            <StackPanel Margin="0,0,0,30">
                <TextBlock
                    Margin="0,0,0,10"
                    FontWeight="Bold"
                    Text="案例2: 水平堆叠模式 (每列宽度自适应内容)" />
                <Border
                    Padding="15"
                    BorderBrush="Gray"
                    BorderThickness="1">
                    <cy:SpacingUniformGrid
                        Columns="3"
                        HorizontalSpacing="15"
                        HorizontalStackMode="True"
                        Rows="2"
                        VerticalSpacing="10">
                        <!--  第一列：短内容  -->
                        <Button
                            Height="35"
                            Background="LightBlue"
                            Content="短" />
                        <Button
                            Height="35"
                            Background="LightBlue"
                            Content="A" />

                        <!--  第二列：中等内容  -->
                        <Button
                            Height="35"
                            Background="LightGreen"
                            Content="中等长度内容" />
                        <Button
                            Height="35"
                            Background="LightGreen"
                            Content="Medium" />

                        <!--  第三列：长内容  -->
                        <Button
                            Height="35"
                            Background="LightCoral"
                            Content="这是一个很长的按钮内容" />
                        <Button
                            Height="35"
                            Background="LightCoral"
                            Content="Very Long Button Content" />
                    </cy:SpacingUniformGrid>
                </Border>
                <TextBlock
                    Margin="0,5,0,0"
                    FontSize="12"
                    Foreground="Gray"
                    Text="说明：每列宽度根据该列中最宽的元素确定，行高统一，水平间距15px" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>