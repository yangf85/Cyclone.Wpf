<UserControl
    x:Class="Cyclone.Wpf.Demo.Views.SectionTitleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cy="https://www.cyclone/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cyclone.Wpf.Demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="20">
            <!--  基本用法  -->
            <cy:SectionHeader
                Margin="0,0,0,20"
                MainTitle="单表态"
                MainTitleBackground="{DynamicResource Background.Caption}"
                MainTitleForeground="{DynamicResource Text.Invert}"
                MainTitleHeight="48" />

            <cy:SectionHeader
                Margin="0,0,0,20"
                MainTitle="系统设置"
                SperaterVisibility="Visible"
                SubTitle="配置应用程序的基本参数"
                SubTitleVisibility="Visible" />

            <!--  自定义样式  -->
            <cy:SectionHeader
                Margin="0,0,0,20"
                MainTitle="用户管理"
                MainTitleFontSize="20"
                MainTitleForeground="#2196F3"
                SeperaterThickness="2"
                SperaterColor="#2196F3"
                SperaterVisibility="Visible"
                SubTitle="管理系统用户和权限"
                SubTitleForeground="#757575"
                SubTitleVisibility="Visible" />

            <!--  无子标题  -->
            <cy:SectionHeader
                Margin="0,0,0,20"
                MainTitle="操作记录"
                SperaterVisibility="Visible" />

            <!--  无分隔线  -->
            <cy:SectionHeader
                Margin="0,0,0,20"
                MainTitle="帮助中心"
                SubTitle="获取系统使用帮助"
                SubTitleVisibility="Visible" />

            <!--  居中对齐  -->
            <cy:SectionHeader
                Margin="0,0,0,20"
                MainTitle="关于我们"
                MainTitleHorizontalAlignment="Center"
                SperaterVisibility="Visible"
                SubTitle="版本信息和联系方式"
                SubTitleHorizontalAlignment="Center"
                SubTitleVisibility="Visible" />

            <!--  更多自定义样式  -->
            <cy:SectionHeader
                Margin="0,0,0,20"
                MainTitle="高级功能"
                MainTitleFontSize="18"
                MainTitleFontWeight="Bold"
                MainTitleForeground="#FF5722"
                SeperaterThickness="1.5"
                SperaterColor="#FF5722"
                SperaterVisibility="Visible"
                SubTitle="仅限管理员使用"
                SubTitleFontSize="11"
                SubTitleForeground="#9E9E9E"
                SubTitleVisibility="Visible" />

            <cy:SectionHeader
                Grid.Column="1"
                Margin="10,5"
                MainTitle="左侧强调条"
                MainTitleBackground="#fff3cd"
                MainTitleForeground="#856404"
                SperaterColor="#ffeeba"
                SperaterVisibility="Visible"
                SubTitle="带有左侧黄色强调条的警告样式标题"
                SubTitleForeground="#856404"
                SubTitleVisibility="Visible" />

            <cy:SectionHeader
                Margin="10,10,10,0"
                Background="DarkGray"
                IsUseUnifiedBackground="True"
                MainTitle="完整内容区块"
                MainTitleFontWeight="Bold"
                MainTitleForeground="White"
                SperaterColor="White"
                SperaterMargin="0,5"
                SperaterVisibility="Visible"
                SubTitle="整个区块都有背景色的示例"
                SubTitleForeground="White"
                SubTitleVisibility="Visible" />
        </StackPanel>
    </Grid>
</UserControl>