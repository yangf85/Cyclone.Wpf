<UserControl
    x:Class="Cyclone.Wpf.Demo.Views.RangeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cy="https://www.cyclone/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cyclone.Wpf.Demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:RangeViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="900"
    mc:Ignorable="d">
    <ScrollViewer>
        <cy:SpacingStackPanel Spacing="25">

            <HeaderedContentControl Header="Slider 控件示例">
                <cy:SpacingStackPanel Spacing="15">
                    <GroupBox Header="音量控制">
                        <cy:SpacingStackPanel Spacing="10">
                            <cy:SpacingUniformGrid
                                HorizontalSpacing="10"
                                Rows="1">
                                <TextBlock
                                    Width="60"
                                    VerticalAlignment="Center"
                                    Text="主音量:" />
                                <Slider
                                    x:Name="VolumeSlider"
                                    IsSnapToTickEnabled="True"
                                    Maximum="100"
                                    Minimum="0"
                                    TickFrequency="10"
                                    TickPlacement="BottomRight"
                                    Value="{Binding VolumeLevel, Mode=TwoWay}" />
                                <TextBlock
                                    Width="40"
                                    VerticalAlignment="Center"
                                    Text="{Binding VolumeLevel, StringFormat={}{0:0}%}" />
                            </cy:SpacingUniformGrid>
                            <cy:SpacingUniformGrid
                                HorizontalSpacing="10"
                                Rows="1">
                                <TextBlock
                                    Width="60"
                                    VerticalAlignment="Center"
                                    Text="低音:" />
                                <Slider
                                    Maximum="10"
                                    Minimum="-10"
                                    TickFrequency="2"
                                    TickPlacement="Both"
                                    Value="{Binding BassLevel, Mode=TwoWay}" />
                                <TextBlock
                                    Width="40"
                                    VerticalAlignment="Center"
                                    Text="{Binding BassLevel, StringFormat={}{0:0}dB}" />
                            </cy:SpacingUniformGrid>
                        </cy:SpacingStackPanel>
                    </GroupBox>

                    <GroupBox Header="图像调节">
                        <cy:SpacingUniformGrid
                            HorizontalSpacing="15"
                            Rows="1">
                            <cy:SpacingStackPanel Spacing="5">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Text="亮度" />
                                <Slider
                                    Height="120"
                                    HorizontalAlignment="Center"
                                    Maximum="100"
                                    Minimum="0"
                                    Orientation="Vertical"
                                    Value="{Binding Brightness, Mode=TwoWay}" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Text="{Binding Brightness, StringFormat={}{0:0}}" />
                            </cy:SpacingStackPanel>
                            <cy:SpacingStackPanel Spacing="5">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Text="对比度" />
                                <Slider
                                    Height="120"
                                    HorizontalAlignment="Center"
                                    Maximum="200"
                                    Minimum="0"
                                    Orientation="Vertical"
                                    Value="{Binding Contrast, Mode=TwoWay}" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Text="{Binding Contrast, StringFormat={}{0:0}}" />
                            </cy:SpacingStackPanel>
                            <cy:SpacingStackPanel Spacing="5">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Text="饱和度" />
                                <Slider
                                    Height="120"
                                    HorizontalAlignment="Center"
                                    Maximum="200"
                                    Minimum="0"
                                    Orientation="Vertical"
                                    Value="{Binding Saturation, Mode=TwoWay}" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Text="{Binding Saturation, StringFormat={}{0:0}}" />
                            </cy:SpacingStackPanel>
                        </cy:SpacingUniformGrid>
                    </GroupBox>
                </cy:SpacingStackPanel>
            </HeaderedContentControl>

            <HeaderedContentControl Header="ProgressBar 控件示例">
                <cy:SpacingStackPanel Spacing="15">
                    <GroupBox Header="文件操作进度">
                        <cy:SpacingStackPanel Spacing="10">
                            <cy:SpacingStackPanel Spacing="5">
                                <TextBlock Text="文件下载进度" />
                                <ProgressBar
                                    Height="20"
                                    Maximum="100"
                                    Value="{Binding DownloadProgress}" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="Gray"
                                    Text="{Binding DownloadProgress, StringFormat=下载进度: {0:0}%}" />
                            </cy:SpacingStackPanel>
                            <cy:SpacingStackPanel Spacing="5">
                                <TextBlock Text="文件上传进度" />
                                <ProgressBar
                                    Height="20"
                                    Maximum="100"
                                    Style="{StaticResource ProgressBar.Style.Stripe}"
                                    Value="{Binding UploadProgress}" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="Gray"
                                    Text="{Binding UploadProgress, StringFormat=上传进度: {0:0}%}" />
                            </cy:SpacingStackPanel>
                        </cy:SpacingStackPanel>
                    </GroupBox>

                    <GroupBox Header="系统状态监控">
                        <cy:SpacingUniformGrid
                            HorizontalSpacing="15"
                            Rows="1">
                            <cy:SpacingStackPanel Spacing="5">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Text="CPU使用率" />
                                <ProgressBar
                                    Height="15"
                                    Foreground="Orange"
                                    Maximum="100"
                                    Value="{Binding CpuUsage}" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="11"
                                    Text="{Binding CpuUsage, StringFormat={}{0:0}%}" />
                            </cy:SpacingStackPanel>
                            <cy:SpacingStackPanel Spacing="5">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Text="内存使用率" />
                                <ProgressBar
                                    Height="15"
                                    Foreground="Red"
                                    Maximum="100"
                                    Value="{Binding MemoryUsage}" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="11"
                                    Text="{Binding MemoryUsage, StringFormat={}{0:0}%}" />
                            </cy:SpacingStackPanel>
                            <cy:SpacingStackPanel Spacing="5">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Text="磁盘使用率" />
                                <ProgressBar
                                    Height="15"
                                    Foreground="Blue"
                                    Maximum="100"
                                    Value="{Binding DiskUsage}" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="11"
                                    Text="{Binding DiskUsage, StringFormat={}{0:0}%}" />
                            </cy:SpacingStackPanel>
                        </cy:SpacingUniformGrid>
                    </GroupBox>
                </cy:SpacingStackPanel>
            </HeaderedContentControl>

            <HeaderedContentControl Header="RangeSlider 控件示例">
                <cy:SpacingStackPanel Spacing="15">
                    <GroupBox Header="价格区间选择">
                        <cy:SpacingStackPanel Spacing="10">
                            <DockPanel>
                                <cy:RangeSlider
                                    x:Name="PriceRangeSlider"
                                    Width="400"
                                    LowerValue="{Binding MinPrice, Mode=TwoWay}"
                                    Maximum="10000"
                                    Minimum="0"
                                    Step="100"
                                    UpperValue="{Binding MaxPrice, Mode=TwoWay}" />
                                <TextBlock
                                    Margin="15,0,0,0"
                                    VerticalAlignment="Center">
                                    <Run Text="价格区间: ¥" />
                                    <Run
                                        FontWeight="Bold"
                                        Text="{Binding MinPrice, StringFormat={}{0:0}}" />
                                    <Run Text=" - ¥" />
                                    <Run
                                        FontWeight="Bold"
                                        Text="{Binding MaxPrice, StringFormat={}{0:0}}" />
                                </TextBlock>
                            </DockPanel>
                            <Button
                                Padding="10,5"
                                HorizontalAlignment="Left"
                                Command="{Binding ShowPriceRangeCommand}"
                                Content="显示当前价格区间" />
                        </cy:SpacingStackPanel>
                    </GroupBox>
                </cy:SpacingStackPanel>
            </HeaderedContentControl>

            <HeaderedContentControl Header="CircularGauge 控件示例">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <cy:CircularGauge
                        x:Name="SpeedGauge"
                        Grid.Column="0"
                        Width="150"
                        Height="150"
                        Margin="20"
                        EndAngle="45"
                        FontSize="12"
                        Foreground="Orange"
                        IsLabelInside="False"
                        LongTickRatio="2.0"
                        Maximum="240"
                        Minimum="0"
                        StartAngle="135"
                        TickLengthRatio="0.08"
                        Value="{Binding CurrentSpeed, Mode=TwoWay}" />
                    <cy:SpacingStackPanel
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Spacing="10">
                        <TextBlock
                            FontSize="14"
                            FontWeight="Bold"
                            Text="当前车速" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="Orange"
                            Text="{Binding CurrentSpeed, StringFormat={}{0:0} km/h}" />
                        <Button
                            Padding="10,5"
                            Command="{Binding RandomSpeedCommand}"
                            Content="随机设置车速" />
                    </cy:SpacingStackPanel>
                </Grid>
            </HeaderedContentControl>
        </cy:SpacingStackPanel>
    </ScrollViewer>
</UserControl>