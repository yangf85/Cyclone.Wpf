<UserControl
    x:Class="Cyclone.Wpf.Demo.Views.RangeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cy="https://www.cyclone/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cyclone.Wpf.Demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:RangeViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="900"
    mc:Ignorable="d">
    <ScrollViewer>
        <cy:SpacingStackPanel Spacing="25">
            <HeaderedContentControl Header="Slider 控件示例">
                <cy:SpacingStackPanel Spacing="15">
                    <GroupBox Header="音量控制">
                        <cy:SpacingStackPanel Spacing="10">
                            <cy:SpacingUniformGrid HorizontalSpacing="10" Rows="1">
                                <TextBlock
                                    Width="60"
                                    VerticalAlignment="Center"
                                    Text="主音量:" />
                                <Slider
                                    x:Name="VolumeSlider"
                                    IsSnapToTickEnabled="True"
                                    Maximum="100"
                                    Minimum="0"
                                    TickFrequency="10"
                                    TickPlacement="BottomRight"
                                    Value="{Binding VolumeLevel, Mode=TwoWay}" />
                                <TextBlock
                                    Width="40"
                                    VerticalAlignment="Center"
                                    Text="{Binding VolumeLevel, StringFormat={}{0:0}%}" />
                            </cy:SpacingUniformGrid>

                            <!--  修改后的低音Slider - 添加了磁性吸附功能  -->
                            <cy:SpacingUniformGrid HorizontalSpacing="10" Rows="1">
                                <TextBlock
                                    Width="60"
                                    VerticalAlignment="Center"
                                    Text="低音:" />
                                <Slider
                                    x:Name="BassSlider"
                                    IsSnapToTickEnabled="True"
                                    Maximum="10"
                                    Minimum="-10"
                                    TickFrequency="2"
                                    TickPlacement="Both"
                                    Value="{Binding BassLevel, Mode=TwoWay}">
                                    <Slider.Ticks>
                                        <DoubleCollection>-10,-8,-6,-4,-2,0,2,4,6,8,10</DoubleCollection>
                                    </Slider.Ticks>
                                </Slider>
                                <TextBlock
                                    Width="40"
                                    VerticalAlignment="Center"
                                    Text="{Binding BassLevel, StringFormat={}{0:0}dB}" />
                            </cy:SpacingUniformGrid>

                            <!--  添加说明文字  -->
                            <Border
                                Padding="8"
                                Background="AliceBlue"
                                BorderBrush="LightBlue"
                                BorderThickness="1"
                                CornerRadius="3">
                                <TextBlock
                                    FontSize="11"
                                    FontStyle="Italic"
                                    Foreground="DarkBlue"
                                    Text="💡 提示：上方的低音滑块已启用磁性吸附功能！当您拖动滑块时，它会自动吸附到最近的刻度点（-10, -8, -6, -4, -2, 0, 2, 4, 6, 8, 10）。吸附阈值设置为1.0，试试看效果！"
                                    TextWrapping="Wrap" />
                            </Border>
                        </cy:SpacingStackPanel>
                    </GroupBox>

                    <GroupBox Header="图像调节">
                        <cy:SpacingUniformGrid HorizontalSpacing="15" Rows="1">
                            <cy:SpacingStackPanel Spacing="5">
                                <TextBlock HorizontalAlignment="Center" Text="亮度" />
                                <Slider
                                    Height="120"
                                    HorizontalAlignment="Center"
                                    Maximum="100"
                                    Minimum="0"
                                    Orientation="Vertical"
                                    Value="{Binding Brightness, Mode=TwoWay}" />
                                <TextBlock HorizontalAlignment="Center" Text="{Binding Brightness, StringFormat={}{0:0}}" />
                            </cy:SpacingStackPanel>
                            <cy:SpacingStackPanel Spacing="5">
                                <TextBlock HorizontalAlignment="Center" Text="对比度" />
                                <Slider
                                    Height="120"
                                    HorizontalAlignment="Center"
                                    Maximum="200"
                                    Minimum="0"
                                    Orientation="Vertical"
                                    Value="{Binding Contrast, Mode=TwoWay}" />
                                <TextBlock HorizontalAlignment="Center" Text="{Binding Contrast, StringFormat={}{0:0}}" />
                            </cy:SpacingStackPanel>
                            <cy:SpacingStackPanel Spacing="5">
                                <TextBlock HorizontalAlignment="Center" Text="饱和度" />
                                <Slider
                                    Height="120"
                                    HorizontalAlignment="Center"
                                    Maximum="200"
                                    Minimum="0"
                                    Orientation="Vertical"
                                    Value="{Binding Saturation, Mode=TwoWay}" />
                                <TextBlock HorizontalAlignment="Center" Text="{Binding Saturation, StringFormat={}{0:0}}" />
                            </cy:SpacingStackPanel>
                        </cy:SpacingUniformGrid>
                    </GroupBox>

                    <!--  添加磁性吸附功能对比演示  -->
                    <GroupBox Header="磁性吸附功能对比演示">
                        <cy:SpacingStackPanel Spacing="15">
                            <TextBlock FontWeight="Bold" Text="对比测试：磁性吸附 vs 普通滑块" />

                            <!--  启用磁性吸附的演示滑块  -->
                            <Border
                                Padding="10"
                                BorderBrush="Green"
                                BorderThickness="1">
                                <cy:SpacingStackPanel Spacing="8">
                                    <TextBlock
                                        FontWeight="Bold"
                                        Foreground="Green"
                                        Text="✅ 启用磁性吸附的滑块" />
                                    <cy:SpacingUniformGrid HorizontalSpacing="10" Rows="1">
                                        <TextBlock
                                            Width="80"
                                            VerticalAlignment="Center"
                                            Text="示例滑块:" />
                                        <Slider
                                            x:Name="MagneticDemoSlider"
                                            cy:SliderHelper.IsEnabledMagneticSnap="True"
                                            cy:SliderHelper.SnapThreshold="2.0"
                                            LargeChange="0.1"
                                            Maximum="100"
                                            Minimum="0"
                                            SmallChange="0.01"
                                            TickFrequency="10"
                                            TickPlacement="Both"
                                            Value="50">
                                            <Slider.Ticks>
                                                <DoubleCollection>0,20,40,50,60,80,100</DoubleCollection>
                                            </Slider.Ticks>
                                        </Slider>
                                        <TextBlock
                                            Width="60"
                                            VerticalAlignment="Center"
                                            Text="{Binding ElementName=MagneticDemoSlider, Path=Value, StringFormat={}{0:0.1}}" />
                                    </cy:SpacingUniformGrid>
                                    <TextBlock
                                        FontSize="10"
                                        Foreground="Green"
                                        Text="🧲 会自动吸附到: 0, 20, 40, 50, 60, 80, 100" />
                                </cy:SpacingStackPanel>
                            </Border>

                            <!--  普通滑块对比  -->
                            <Border
                                Padding="10"
                                BorderBrush="Orange"
                                BorderThickness="1">
                                <cy:SpacingStackPanel Spacing="8">
                                    <TextBlock
                                        FontWeight="Bold"
                                        Foreground="Orange"
                                        Text="🔄 普通滑块（无磁性吸附）" />
                                    <cy:SpacingUniformGrid HorizontalSpacing="10" Rows="1">
                                        <TextBlock
                                            Width="80"
                                            VerticalAlignment="Center"
                                            Text="示例滑块:" />
                                        <Slider
                                            x:Name="NormalDemoSlider"
                                            Maximum="100"
                                            Minimum="0"
                                            TickFrequency="10"
                                            TickPlacement="Both"
                                            Value="50">
                                            <Slider.Ticks>
                                                <DoubleCollection>0,20,40,50,60,80,100</DoubleCollection>
                                            </Slider.Ticks>
                                        </Slider>
                                        <TextBlock
                                            Width="60"
                                            VerticalAlignment="Center"
                                            Text="{Binding ElementName=NormalDemoSlider, Path=Value, StringFormat={}{0:0.1}}" />
                                    </cy:SpacingUniformGrid>
                                    <TextBlock
                                        FontSize="10"
                                        Foreground="Orange"
                                        Text="📍 可以停在任意位置" />
                                </cy:SpacingStackPanel>
                            </Border>
                        </cy:SpacingStackPanel>
                    </GroupBox>
                </cy:SpacingStackPanel>
            </HeaderedContentControl>

            <!--  继续保持原有的其他控件  -->
            <HeaderedContentControl Header="ProgressBar 控件示例">
                <cy:SpacingStackPanel Spacing="15">
                    <GroupBox Header="文件操作进度">
                        <cy:SpacingStackPanel Spacing="10">
                            <cy:SpacingStackPanel Spacing="5">
                                <TextBlock Text="文件下载进度" />
                                <ProgressBar
                                    Height="20"
                                    Maximum="100"
                                    Value="{Binding DownloadProgress}" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="Gray"
                                    Text="{Binding DownloadProgress, StringFormat=下载进度: {0:0}%}" />
                            </cy:SpacingStackPanel>
                            <cy:SpacingStackPanel Spacing="5">
                                <TextBlock Text="文件上传进度" />
                                <ProgressBar
                                    Height="20"
                                    Maximum="100"
                                    Style="{StaticResource ProgressBar.Style.Stripe}"
                                    Value="{Binding UploadProgress}" />
                                <TextBlock
                                    FontSize="12"
                                    Foreground="Gray"
                                    Text="{Binding UploadProgress, StringFormat=上传进度: {0:0}%}" />
                            </cy:SpacingStackPanel>
                        </cy:SpacingStackPanel>
                    </GroupBox>

                    <GroupBox Header="系统状态监控">
                        <cy:SpacingUniformGrid HorizontalSpacing="15" Rows="1">
                            <cy:SpacingStackPanel Spacing="5">
                                <TextBlock HorizontalAlignment="Center" Text="CPU使用率" />
                                <ProgressBar
                                    Height="15"
                                    Foreground="Orange"
                                    Maximum="100"
                                    Value="{Binding CpuUsage}" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="11"
                                    Text="{Binding CpuUsage, StringFormat={}{0:0}%}" />
                            </cy:SpacingStackPanel>
                            <cy:SpacingStackPanel Spacing="5">
                                <TextBlock HorizontalAlignment="Center" Text="内存使用率" />
                                <ProgressBar
                                    Height="15"
                                    Foreground="Red"
                                    Maximum="100"
                                    Value="{Binding MemoryUsage}" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="11"
                                    Text="{Binding MemoryUsage, StringFormat={}{0:0}%}" />
                            </cy:SpacingStackPanel>
                            <cy:SpacingStackPanel Spacing="5">
                                <TextBlock HorizontalAlignment="Center" Text="磁盘使用率" />
                                <ProgressBar
                                    Height="15"
                                    Foreground="Blue"
                                    Maximum="100"
                                    Value="{Binding DiskUsage}" />
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    FontSize="11"
                                    Text="{Binding DiskUsage, StringFormat={}{0:0}%}" />
                            </cy:SpacingStackPanel>
                        </cy:SpacingUniformGrid>
                    </GroupBox>
                </cy:SpacingStackPanel>
            </HeaderedContentControl>

            <HeaderedContentControl Header="RangeSlider 控件示例">
                <cy:SpacingStackPanel Spacing="15">
                    <GroupBox Header="价格区间选择">
                        <cy:SpacingStackPanel Spacing="10">
                            <DockPanel>
                                <cy:RangeSlider
                                    x:Name="PriceRangeSlider"
                                    Width="500"
                                    Maximum="10"
                                    Minimum="0.01"
                                    Step="0.01" />
                                <TextBlock Margin="15,0,0,0" VerticalAlignment="Center">
                                    <Run Text="价格区间: ¥" />
                                    <Run FontWeight="Bold" Text="{Binding MinPrice, StringFormat={}{0:0}}" />
                                    <Run Text=" - ¥" />
                                    <Run FontWeight="Bold" Text="{Binding MaxPrice, StringFormat={}{0:0}}" />
                                </TextBlock>
                            </DockPanel>
                            <Button
                                Padding="10,5"
                                HorizontalAlignment="Left"
                                Command="{Binding ShowPriceRangeCommand}"
                                Content="显示当前价格区间" />
                        </cy:SpacingStackPanel>
                    </GroupBox>
                    <GroupBox Header="对齐刻度区间">
                        <cy:RangeSlider
                            Width="400"
                            IsSnapToTick="True"
                            LowerValue="25"
                            Maximum="100"
                            Minimum="0"
                            TickPlacement="Both"
                            UpperValue="75">
                            <cy:RangeSlider.Ticks>
                                <!--  滑块只能停在这些特定位置  -->
                                <DoubleCollection>0,15,25,40,60,75,90,100</DoubleCollection>
                            </cy:RangeSlider.Ticks>
                        </cy:RangeSlider>
                    </GroupBox>
                </cy:SpacingStackPanel>
            </HeaderedContentControl>

            <HeaderedContentControl Header="CircularGauge 控件示例">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <cy:CircularGauge
                        x:Name="SpeedGauge"
                        Grid.Column="0"
                        Width="150"
                        Height="150"
                        Margin="20"
                        EndAngle="45"
                        FontSize="12"
                        Foreground="Orange"
                        IsLabelInside="False"
                        LongTickRatio="2.0"
                        Maximum="240"
                        Minimum="0"
                        StartAngle="135"
                        TickLengthRatio="0.08"
                        Value="{Binding CurrentSpeed, Mode=TwoWay}" />
                    <cy:SpacingStackPanel
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Spacing="10">
                        <TextBlock
                            FontSize="14"
                            FontWeight="Bold"
                            Text="当前车速" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="Orange"
                            Text="{Binding CurrentSpeed, StringFormat={}{0:0} km/h}" />
                        <Button
                            Padding="10,5"
                            Command="{Binding RandomSpeedCommand}"
                            Content="随机设置车速" />
                    </cy:SpacingStackPanel>
                </Grid>
            </HeaderedContentControl>
        </cy:SpacingStackPanel>
    </ScrollViewer>
</UserControl>