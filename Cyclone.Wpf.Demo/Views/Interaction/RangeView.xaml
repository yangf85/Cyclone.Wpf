<UserControl x:Class="Cyclone.Wpf.Demo.Views.RangeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cy="https://www.cyclone/wpf"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Cyclone.Wpf.Demo.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance Type=local:RangeViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <cy:SpacingStackPanel Spacing="20">
        <HeaderedContentControl Header="Slider">
            <cy:SpacingUniformGrid HorizontalSpacing="5" Rows="1">
                <Slider />
                <Slider />
                <Slider />
            </cy:SpacingUniformGrid>
        </HeaderedContentControl>

        <HeaderedContentControl Header="ProgressBar">
            <cy:SpacingUniformGrid HorizontalSpacing="5" Rows="1">
                <ProgressBar IsIndeterminate="True" />
                <ProgressBar Style="{StaticResource ProgressBar.Style.Stripe}" Value="35" />
                <ProgressBar />
            </cy:SpacingUniformGrid>
        </HeaderedContentControl>

        <HeaderedContentControl Header="CountDown">
            <cy:SpacingStackPanel>
                <cy:NumberCountdown x:Name="CountdownControl"
                                    Width="200"
                                    Height="200"
                                    AnimationType="Scale"
                                    IsAnimating="{Binding ElementName=AAA, Path=IsChecked}"
                                    NumberColor="Red"
                                    StartNumber="5" />
                <ToggleButton x:Name="AAA"
                              Margin="10"
                              Content="Start" />
            </cy:SpacingStackPanel>
        </HeaderedContentControl>

        <HeaderedContentControl Header="CountDown">
            <cy:CircularGauge Width="200"
                              Height="200"
                              EndAngle="0"
                              FontSize="32"
                              LargeChange="10"
                              LongTickRatio="2.5"
                              Maximum="100"
                              Minimum="0"
                              SmallChange="1"
                              StartAngle="180"
                              TickLengthRatio="0.05"
                              Value="{Binding Value, StringFormat={}{0:F1}}" />
        </HeaderedContentControl>
    </cy:SpacingStackPanel>
</UserControl>