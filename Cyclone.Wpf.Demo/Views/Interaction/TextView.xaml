<UserControl
    x:Class="Cyclone.Wpf.Demo.Views.TextView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cy="https://www.cyclone/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cyclone.Wpf.Demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:TextViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <cy:SpacingStackPanel Spacing="20">
        <HeaderedContentControl Header="TextBox">
            <cy:SpacingUniformGrid HorizontalSpacing="5" Rows="1">
                <TextBox Text="{Binding Text, ValidatesOnNotifyDataErrors=True}" />
                <TextBox Text="Two" />
                <TextBox Text="Three" />
            </cy:SpacingUniformGrid>
        </HeaderedContentControl>
        <HeaderedContentControl Header="NumberBox">
            <cy:SpacingUniformGrid HorizontalSpacing="5" Rows="1">
                <cy:NumberBox NumberStyle="Number" Value="{Binding Number}" />
                <cy:NumberBox NumberStyle="Integer" Value="{Binding Number}" />
                <cy:NumberBox NumberStyle="Float" Value="{Binding Number}" />
            </cy:SpacingUniformGrid>
        </HeaderedContentControl>
        <HeaderedContentControl Header="EditTextBlock">
            <cy:SpacingUniformGrid HorizontalSpacing="5" Rows="1">
                <cy:EditableTextBlock Text="One" />
                <cy:EditableTextBlock Text="Two" />
                <cy:EditableTextBlock Text="Three" />
            </cy:SpacingUniformGrid>
        </HeaderedContentControl>

        <HeaderedContentControl Header="HighlightTextBlock">
            <cy:SpacingUniformGrid HorizontalSpacing="5" Rows="1">
                <cy:HighlightTextBlock
                    HighlightForeground="Red"
                    IsIgnoreCase="False"
                    QueriesText="{Binding ElementName=InputTextBox, Path=Text}"
                    SourceText="ABCDEFGabcdefg一二三四五"
                    TextWrapping="WrapWithOverflow" />
                <cy:HighlightTextBlock
                    HighlightBackground="{DynamicResource Highlighted.Background}"
                    HighlightForeground="{DynamicResource Highlight.Default}"
                    QueriesText="{Binding ElementName=InputTextBox, Path=Text}"
                    SourceText="{Binding SourceText}" />
                <TextBox x:Name="InputTextBox" />
            </cy:SpacingUniformGrid>
        </HeaderedContentControl>

        <HeaderedContentControl Header="RunningBlock">
            <cy:SpacingUniformGrid HorizontalSpacing="5" Rows="1">
                <cy:RunningText
                    x:Name="rt"
                    Margin="6"
                    Padding="12,6"
                    Background="{DynamicResource Active.Background}"
                    Foreground="{DynamicResource Active.Foreground}"
                    Text="WPF滚动轮播文字（走马灯效果）；可调节滚动速度、首尾间距...">
                    <cy:RunningText.Style>
                        <Style TargetType="{x:Type cy:RunningText}">
                            <Setter Property="VerticalAlignment" Value="Top" />
                            <Style.Triggers>
                                <Trigger Property="Direction" Value="BottomToTop">
                                    <Setter Property="VerticalAlignment" Value="Stretch" />
                                    <Setter Property="HorizontalAlignment" Value="Left" />
                                </Trigger>
                                <Trigger Property="Direction" Value="TopToBottom">
                                    <Setter Property="VerticalAlignment" Value="Stretch" />
                                    <Setter Property="HorizontalAlignment" Value="Left" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </cy:RunningText.Style>
                </cy:RunningText>
            </cy:SpacingUniformGrid>
        </HeaderedContentControl>

        <HeaderedContentControl Header="RunningBlock">
            <cy:SpacingUniformGrid HorizontalSpacing="5" Rows="1">
                <cy:RunningBlock
                    x:Name="rb"
                    Margin="6" Content="12345"
                    Padding="12,6"
                    Background="{DynamicResource Default.Background}"
                    Foreground="{DynamicResource Default.Foreground}">
                    <cy:RunningBlock.Style>
                        <Style TargetType="{x:Type cy:RunningBlock}">
                            <Setter Property="VerticalAlignment" Value="Top" />
                            <Style.Triggers>
                                <Trigger Property="Direction" Value="BottomToTop">
                                    <Setter Property="VerticalAlignment" Value="Stretch" />
                                    <Setter Property="HorizontalAlignment" Value="Left" />
                                </Trigger>
                                <Trigger Property="Direction" Value="TopToBottom">
                                    <Setter Property="VerticalAlignment" Value="Stretch" />
                                    <Setter Property="HorizontalAlignment" Value="Left" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </cy:RunningBlock.Style>
                </cy:RunningBlock>
            </cy:SpacingUniformGrid>
        </HeaderedContentControl>
    </cy:SpacingStackPanel>
</UserControl>