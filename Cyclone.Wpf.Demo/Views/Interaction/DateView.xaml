<UserControl
    x:Class="Cyclone.Wpf.Demo.Views.DateView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cy="https://www.cyclone/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cyclone.Wpf.Demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:DateViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <cy:SpacingStackPanel
            Margin="20"
            Spacing="30">

            <!--  DateRangePicker 案例  -->
            <Border
                Padding="20"
                BorderBrush="LightGray"
                BorderThickness="1">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,15"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="DateRangePicker - 日期范围选择器" />

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  基础日期范围选择  -->
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="基础范围选择:" />
                        <cy:DateRangePicker
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="10,5"
                            End="{Binding EndDate}"
                            SelectedDateFormat="yyyy-MM-dd"
                            Start="{Binding StartDate}" />
                        <Button
                            Grid.Row="0"
                            Grid.Column="2"
                            Padding="10,5"
                            Command="{Binding ShowDateRangeCommand}"
                            Content="显示日期" />

                        <!--  带预定义选项的日期范围选择  -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="预定义选项:" />
                        <cy:DateRangePicker
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="10,5"
                            End="{Binding EndDate2}"
                            IsShowPredfine="True"
                            SelectedDateFormat="yyyy/MM/dd"
                            Start="{Binding StartDate2}" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="{Binding DateRangeInfo}" />

                        <!--  带禁用日期的范围选择  -->
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="禁用特定日期:" />
                        <cy:DateRangePicker
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="10,5"
                            BlackoutDates="{Binding BlockoutDates}"
                            End="{Binding EndDate3}"
                            SelectedDateFormat="MM/dd/yyyy"
                            Start="{Binding StartDate3}" />
                    </Grid>
                </StackPanel>
            </Border>

            <!--  TimePicker 案例  -->
            <Border
                Padding="20"
                BorderBrush="LightGray"
                BorderThickness="1">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,15"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="TimePicker - 时间选择器" />

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  基础时间选择  -->
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="24小时格式:" />
                        <cy:TimePicker
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="10,5"
                            SelectedTime="{Binding SelectedTime}"
                            TimeFormat="HH:mm:ss"
                            Watermark="请选择时间" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            FontWeight="Bold"
                            Text="{Binding SelectedTime, StringFormat='选中时间: {0}'}" />

                        <!--  12小时格式  -->
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="12小时格式:" />
                        <cy:TimePicker
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="10,5"
                            SelectedTime="{Binding SelectedTime2}"
                            TimeFormat="hh:mm:ss tt"
                            Watermark="选择时间" />
                        <Button
                            Grid.Row="1"
                            Grid.Column="2"
                            Padding="10,5"
                            HorizontalAlignment="Left"
                            Command="{Binding SetCurrentTimeCommand}"
                            Content="设置当前时间" />

                        <!--  只显示小时分钟  -->
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="小时:分钟:" />
                        <cy:TimePicker
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="10,5"
                            SelectedTime="{Binding SelectedTime3}"
                            TimeFormat="HH:mm"
                            Watermark="HH:MM" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="2"
                            VerticalAlignment="Center"
                            Foreground="Blue"
                            Text="{Binding TimeInfo}" />
                    </Grid>
                </StackPanel>
            </Border>

            <!--  Calendar with Helper 案例  -->
            <Border
                Padding="20"
                BorderBrush="LightGray"
                BorderThickness="1">
                <StackPanel>
                    <TextBlock
                        Margin="0,0,0,15"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="Calendar - 日历控件" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="350" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  日历控件  -->
                        <Calendar
                            Grid.Column="0"
                            Width="320"
                            Height="300"
                            HorizontalAlignment="Left"
                            cy:DateHelper.BlockoutDates="{Binding CalendarBlockoutDates}"
                            SelectedDate="{Binding SelectedDate}"
                            SelectionMode="MultipleRange" />

                        <!--  控制面板  -->
                        <StackPanel
                            Grid.Column="1"
                            Margin="20,0,0,0">
                            <TextBlock
                                Margin="0,0,0,5"
                                FontWeight="Bold"
                                Text="选中日期:" />
                            <TextBlock
                                Margin="0,0,0,15"
                                FontSize="14"
                                Text="{Binding SelectedDate, StringFormat='yyyy年MM月dd日'}" />

                            <TextBlock
                                Margin="0,0,0,10"
                                FontWeight="Bold"
                                Text="操作:" />
                            <cy:SpacingStackPanel
                                Margin="0,0,0,10"
                                Orientation="Horizontal"
                                Spacing="10">
                                <Button
                                    Padding="10,5"
                                    Command="{Binding AddBlockoutDatesCommand}"
                                    Content="添加禁用日期" />
                                <Button
                                    Padding="10,5"
                                    Command="{Binding ClearBlockoutDatesCommand}"
                                    Content="清除禁用日期" />
                            </cy:SpacingStackPanel>

                            <Button
                                Padding="10,5"
                                HorizontalAlignment="Left"
                                Command="{Binding SetTodayCommand}"
                                Content="选择今天" />

                            <TextBlock
                                Margin="0,20,0,5"
                                FontWeight="Bold"
                                Text="禁用日期列表:" />
                            <Border
                                MaxHeight="120"
                                Padding="10"
                                BorderBrush="LightGray"
                                BorderThickness="1">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ItemsControl ItemsSource="{Binding CalendarBlockoutDates}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    FontSize="12"
                                                    Foreground="Red"
                                                    Text="{Binding StringFormat='yyyy-MM-dd'}" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </cy:SpacingStackPanel>
    </ScrollViewer>
</UserControl>