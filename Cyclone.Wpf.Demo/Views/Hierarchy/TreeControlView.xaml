<UserControl
    x:Class="Cyclone.Wpf.Demo.Views.TreeControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cy="https://www.cyclone/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cyclone.Wpf.Demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:TreeControlViewModel}"
    d:DesignHeight="650"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!--  卡片样式  -->
        <Style
            x:Key="CardStyle"
            TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="4"
                        Direction="270"
                        Opacity="0.2"
                        ShadowDepth="2"
                        Color="Gray" />
                </Setter.Value>
            </Setter>
        </Style>

        <!--  标题样式  -->
        <Style
            x:Key="TitleStyle"
            TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#2C3E50" />
            <Setter Property="Margin" Value="0,0,0,15" />
        </Style>

        <!--  树节点样式  -->
        <Style
            x:Key="TreeNodeStyle"
            TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5,2" />
            <Setter Property="FontSize" Value="13" />
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <cy:SpacingStackPanel
            Margin="20"
            Spacing="0">

            <!--  页面标题  -->
            <TextBlock
                Margin="0,0,0,20"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="TreeView 树形控件展示" />

            <cy:SpacingUniformGrid
                Columns="2"
                HorizontalSpacing="20">

                <!--  城市地区树  -->
                <Border Style="{StaticResource CardStyle}">
                    <cy:SpacingStackPanel Spacing="15">
                        <StackPanel>
                            <TextBlock
                                Style="{StaticResource TitleStyle}"
                                Text="🌍 世界城市树" />
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="12"
                                Foreground="#7F8C8D"
                                Text="展示世界各国家和城市的层次结构" />
                        </StackPanel>

                        <TreeView
                            Height="350"
                            ItemsSource="{Binding TreeViewModel.Cities}"
                            SelectedValuePath="NodePath">
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem">
                                    <Setter Property="IsExpanded" Value="True" />
                                    <EventSetter
                                        Event="Selected"
                                        Handler="TreeViewItem_Selected" />
                                </Style>
                            </TreeView.ItemContainerStyle>
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Cities}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            Text="🌍">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="🌍" />
                                                    <Style.Triggers>
                                                        <DataTrigger
                                                            Binding="{Binding Level}"
                                                            Value="1">
                                                            <Setter Property="Text" Value="🏳️" />
                                                        </DataTrigger>
                                                        <DataTrigger
                                                            Binding="{Binding Level}"
                                                            Value="2">
                                                            <Setter Property="Text" Value="🏙️" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock
                                            Style="{StaticResource TreeNodeStyle}"
                                            Text="{Binding NodePath}" />
                                        <TextBlock
                                            Margin="8,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="10"
                                            Foreground="Gray"
                                            Text="{Binding Population}" />
                                    </StackPanel>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                            <TreeView.ContextMenu>
                                <ContextMenu>
                                    <MenuItem
                                        Command="{Binding ExpandAllCommand}"
                                        Header="展开所有">
                                        <MenuItem.Icon>
                                            <TextBlock
                                                FontSize="12"
                                                Text="📂" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem
                                        Command="{Binding CollapseAllCommand}"
                                        Header="折叠所有">
                                        <MenuItem.Icon>
                                            <TextBlock
                                                FontSize="12"
                                                Text="📁" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <Separator />
                                    <MenuItem
                                        Command="{Binding AddCityCommand}"
                                        Header="添加城市">
                                        <MenuItem.Icon>
                                            <TextBlock
                                                FontSize="12"
                                                Text="➕" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </TreeView.ContextMenu>
                        </TreeView>

                        <!--  城市操作按钮  -->
                        <cy:SpacingUniformGrid
                            Columns="3"
                            HorizontalSpacing="8">
                            <Button
                                Command="{Binding TreeViewModel.GetCityCommand}"
                                Content="获取选中城市"
                                FontSize="11" />
                            <Button
                                Command="{Binding AddCountryCommand}"
                                Content="添加国家"
                                FontSize="11" />
                            <Button
                                Command="{Binding ClearSelectionCommand}"
                                Content="清空选择"
                                FontSize="11" />
                        </cy:SpacingUniformGrid>
                    </cy:SpacingStackPanel>
                </Border>

                <!--  文件系统树  -->
                <Border Style="{StaticResource CardStyle}">
                    <cy:SpacingStackPanel Spacing="15">
                        <StackPanel>
                            <TextBlock
                                Style="{StaticResource TitleStyle}"
                                Text="📁 文件系统树" />
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="12"
                                Foreground="#7F8C8D"
                                Text="模拟文件系统结构，支持文件夹和文件显示" />
                        </StackPanel>

                        <TreeView
                            Height="350"
                            ItemsSource="{Binding FileSystemItems}">
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem">
                                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                                </Style>
                            </TreeView.ItemContainerStyle>
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Cities}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center"
                                            FontSize="16">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="📂" />
                                                    <Style.Triggers>
                                                        <DataTrigger
                                                            Binding="{Binding IsFile}"
                                                            Value="True">
                                                            <Setter Property="Text" Value="📄" />
                                                        </DataTrigger>
                                                        <DataTrigger
                                                            Binding="{Binding FileType}"
                                                            Value="txt">
                                                            <Setter Property="Text" Value="📝" />
                                                        </DataTrigger>
                                                        <DataTrigger
                                                            Binding="{Binding FileType}"
                                                            Value="jpg">
                                                            <Setter Property="Text" Value="🖼️" />
                                                        </DataTrigger>
                                                        <DataTrigger
                                                            Binding="{Binding FileType}"
                                                            Value="mp3">
                                                            <Setter Property="Text" Value="🎵" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock
                                            Style="{StaticResource TreeNodeStyle}"
                                            Text="{Binding NodePath}" />
                                        <TextBlock
                                            Margin="8,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="10"
                                            Foreground="Gray"
                                            Text="{Binding FileSize}" />
                                    </StackPanel>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>

                        <!--  文件操作按钮  -->
                        <cy:SpacingUniformGrid
                            Columns="3"
                            HorizontalSpacing="8">
                            <Button
                                Command="{Binding NewFolderCommand}"
                                Content="新建文件夹"
                                FontSize="11" />
                            <Button
                                Command="{Binding NewFileCommand}"
                                Content="新建文件"
                                FontSize="11" />
                            <Button
                                Command="{Binding DeleteItemCommand}"
                                Content="删除选中"
                                FontSize="11" />
                        </cy:SpacingUniformGrid>
                    </cy:SpacingStackPanel>
                </Border>

                <!--  组织架构树  -->
                <Border Style="{StaticResource CardStyle}">
                    <cy:SpacingStackPanel Spacing="15">
                        <StackPanel>
                            <TextBlock
                                Style="{StaticResource TitleStyle}"
                                Text="👥 组织架构树" />
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="12"
                                Foreground="#7F8C8D"
                                Text="公司组织架构，支持部门和员工层次显示" />
                        </StackPanel>

                        <TreeView
                            Height="350"
                            ItemsSource="{Binding OrganizationItems}">
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem">
                                    <Setter Property="IsExpanded" Value="True" />
                                </Style>
                            </TreeView.ItemContainerStyle>
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Cities}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center"
                                            FontSize="16">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="🏢" />
                                                    <Style.Triggers>
                                                        <DataTrigger
                                                            Binding="{Binding IsDepartment}"
                                                            Value="True">
                                                            <Setter Property="Text" Value="🏛️" />
                                                        </DataTrigger>
                                                        <DataTrigger
                                                            Binding="{Binding IsEmployee}"
                                                            Value="True">
                                                            <Setter Property="Text" Value="👤" />
                                                        </DataTrigger>
                                                        <DataTrigger
                                                            Binding="{Binding Position}"
                                                            Value="Manager">
                                                            <Setter Property="Text" Value="👔" />
                                                        </DataTrigger>
                                                        <DataTrigger
                                                            Binding="{Binding Position}"
                                                            Value="Director">
                                                            <Setter Property="Text" Value="🎯" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <TextBlock
                                            Style="{StaticResource TreeNodeStyle}"
                                            Text="{Binding NodePath}" />
                                        <TextBlock
                                            Margin="8,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="10"
                                            Foreground="Blue"
                                            Text="{Binding Position}" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="10"
                                            Foreground="Green"
                                            Text="{Binding EmployeeCount}" />
                                    </StackPanel>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>

                        <!--  组织操作按钮  -->
                        <cy:SpacingUniformGrid
                            Columns="3"
                            HorizontalSpacing="8">
                            <Button
                                Command="{Binding AddDepartmentCommand}"
                                Content="添加部门"
                                FontSize="11" />
                            <Button
                                Command="{Binding AddEmployeeCommand}"
                                Content="添加员工"
                                FontSize="11" />
                            <Button
                                Command="{Binding ShowStatsCommand}"
                                Content="统计信息"
                                FontSize="11" />
                        </cy:SpacingUniformGrid>
                    </cy:SpacingStackPanel>
                </Border>

                <!--  搜索过滤树  -->
                <Border Style="{StaticResource CardStyle}">
                    <cy:SpacingStackPanel Spacing="15">
                        <StackPanel>
                            <TextBlock
                                Style="{StaticResource TitleStyle}"
                                Text="🔍 搜索过滤树" />
                            <TextBlock
                                Margin="0,0,0,10"
                                FontSize="12"
                                Foreground="#7F8C8D"
                                Text="支持实时搜索和过滤功能" />
                        </StackPanel>

                        <!--  搜索框  -->
                        <TextBox
                            cy:TextBoxHelper.Watermark="🔍 搜索节点..."
                            BorderBrush="#3498DB"
                            BorderThickness="2"
                            Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}" />

                        <!--  过滤选项  -->
                        <cy:SpacingStackPanel
                            Orientation="Horizontal"
                            Spacing="15">
                            <CheckBox
                                Content="显示城市"
                                FontSize="11"
                                IsChecked="{Binding ShowCities}" />
                            <CheckBox
                                Content="显示国家"
                                FontSize="11"
                                IsChecked="{Binding ShowCountries}" />
                            <CheckBox
                                Content="大小写敏感"
                                FontSize="11"
                                IsChecked="{Binding CaseSensitive}" />
                        </cy:SpacingStackPanel>

                        <!--  过滤结果树  -->
                        <TreeView
                            Height="250"
                            ItemsSource="{Binding FilteredItems}">
                            <TreeView.ItemContainerStyle>
                                <Style TargetType="TreeViewItem">
                                    <Setter Property="IsExpanded" Value="True" />
                                </Style>
                            </TreeView.ItemContainerStyle>
                            <TreeView.ItemTemplate>
                                <HierarchicalDataTemplate ItemsSource="{Binding Cities}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            Text="🔍" />
                                        <TextBlock
                                            Style="{StaticResource TreeNodeStyle}"
                                            Text="{Binding NodePath}" />
                                    </StackPanel>
                                </HierarchicalDataTemplate>
                            </TreeView.ItemTemplate>
                        </TreeView>

                        <!--  搜索统计  -->
                        <Border
                            Padding="8"
                            Background="#F8F9FA"
                            BorderBrush="#DEE2E6"
                            BorderThickness="1"
                            CornerRadius="5">
                            <TextBlock FontSize="11">
                                <Run Text="搜索结果: " />
                                <Run
                                    FontWeight="Bold"
                                    Foreground="Blue"
                                    Text="{Binding SearchResultCount, Mode=OneWay}" />
                                <Run Text=" 项匹配" />
                            </TextBlock>
                        </Border>
                    </cy:SpacingStackPanel>
                </Border>
            </cy:SpacingUniformGrid>

            <!--  操作状态显示  -->
            <Border Style="{StaticResource CardStyle}">
                <cy:SpacingStackPanel Spacing="10">
                    <TextBlock
                        Style="{StaticResource TitleStyle}"
                        Text="📊 操作状态" />
                    <Border
                        Padding="15"
                        Background="#F8F9FA"
                        BorderBrush="#DEE2E6"
                        BorderThickness="1"
                        CornerRadius="5">
                        <cy:SpacingStackPanel Spacing="5">
                            <TextBlock>
                                <Run Text="选中城市路径: " />
                                <Run
                                    FontWeight="Bold"
                                    Foreground="Blue"
                                    Text="{Binding SelectedCityPath, FallbackValue='无选中项'}" />
                            </TextBlock>
                            <TextBlock>
                                <Run Text="最后操作: " />
                                <Run
                                    FontWeight="Bold"
                                    Foreground="Green"
                                    Text="{Binding LastOperation}" />
                            </TextBlock>
                            <TextBlock>
                                <Run Text="搜索关键词: " />
                                <Run
                                    FontWeight="Bold"
                                    Foreground="Orange"
                                    Text="{Binding SearchKeyword, FallbackValue='无'}" />
                            </TextBlock>
                        </cy:SpacingStackPanel>
                    </Border>
                </cy:SpacingStackPanel>
            </Border>
        </cy:SpacingStackPanel>
    </ScrollViewer>
</UserControl>