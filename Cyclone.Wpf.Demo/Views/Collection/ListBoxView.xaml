<UserControl
    x:Class="Cyclone.Wpf.Demo.Views.ListBoxView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cy="https://www.cyclone/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cyclone.Wpf.Demo.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:ListBoxViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <TabControl>
        <!--  基础ListBox案例  -->
        <TabItem Header="基础ListBox">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="基础ListBox示例 - 显示用户基本信息" />

                <ListBox
                    Grid.Row="1"
                    DisplayMemberPath="FullName"
                    ItemsSource="{Binding BasicData}"
                    SelectedItem="{Binding SelectedBasicPerson}" />
            </Grid>
        </TabItem>

        <!--  高级ListBox案例  -->
        <TabItem Header="高级ListBox">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  标题  -->
                <TextBlock
                    Grid.Row="0"
                    Margin="0,0,0,10"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="高级ListBox示例 - 带过滤、排序、分组功能" />

                <!--  控制面板  -->
                <Border
                    Grid.Row="1"
                    Margin="0,0,0,10"
                    Padding="10"
                    Background="LightGray">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!--  第一行：搜索和过滤  -->
                        <StackPanel
                            Grid.Row="0"
                            Margin="0,0,0,10"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Text="搜索:" />
                            <TextBox
                                Width="150"
                                Margin="0,0,20,0"
                                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

                            <TextBlock
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Text="年龄:" />
                            <ComboBox
                                Width="100"
                                Margin="0,0,20,0"
                                ItemsSource="{Binding AgeRanges}"
                                SelectedItem="{Binding SelectedAgeRange}" />

                            <TextBlock
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Text="状态:" />
                            <ComboBox
                                Width="80"
                                ItemsSource="{Binding StatusFilters}"
                                SelectedItem="{Binding SelectedStatusFilter}" />
                        </StackPanel>

                        <!--  第二行：排序和分组  -->
                        <StackPanel
                            Grid.Row="1"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Text="排序:" />
                            <ComboBox
                                Width="100"
                                Margin="0,0,10,0"
                                ItemsSource="{Binding SortOptions}"
                                SelectedItem="{Binding SelectedSortOption}" />

                            <CheckBox
                                Margin="0,0,20,0"
                                VerticalAlignment="Center"
                                Content="降序"
                                IsChecked="{Binding IsDescending}" />

                            <TextBlock
                                Margin="0,0,5,0"
                                VerticalAlignment="Center"
                                Text="分组:" />
                            <ComboBox
                                Width="100"
                                Margin="0,0,20,0"
                                ItemsSource="{Binding GroupOptions}"
                                SelectedItem="{Binding SelectedGroupOption}" />

                            <Button
                                Margin="0,0,20,0"
                                Padding="10,5"
                                Command="{Binding ClearFiltersCommand}"
                                Content="清除过滤" />

                            <TextBlock
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Text="{Binding StatusText}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!--  表格标题  -->
                <Border
                    Grid.Row="2"
                    Margin="0,0,0,0"
                    Padding="10,5"
                    Background="LightBlue">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            HorizontalAlignment="Center"
                            FontWeight="Bold"
                            Text="头像" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            FontWeight="Bold"
                            Text="姓名 / 邮箱" />
                        <TextBlock
                            Grid.Column="2"
                            FontWeight="Bold"
                            Text="地址信息" />
                        <TextBlock
                            Grid.Column="3"
                            HorizontalAlignment="Center"
                            FontWeight="Bold"
                            Text="年龄" />
                        <TextBlock
                            Grid.Column="4"
                            HorizontalAlignment="Center"
                            FontWeight="Bold"
                            Text="状态" />
                        <TextBlock
                            Grid.Column="5"
                            HorizontalAlignment="Center"
                            FontWeight="Bold"
                            Text="验证" />
                    </Grid>
                </Border>

                <!--  高级ListBox  -->
                <ListBox
                    Grid.Row="3"
                    ItemsSource="{Binding FilteredData}"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    SelectedItem="{Binding SelectedAdvancedPerson}">

                    <!--  移除默认的选中样式背景  -->
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Setter Property="Padding" Value="0" />
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="LightCyan" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <!--  分组样式  -->
                    <ListBox.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <Border
                                        Padding="5"
                                        Background="DarkBlue">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                FontWeight="Bold"
                                                Foreground="White"
                                                Text="{Binding Name}" />
                                            <TextBlock
                                                FontWeight="Bold"
                                                Foreground="White"
                                                Text="{Binding ItemCount, StringFormat=' ({0} 项)'}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ListBox.GroupStyle>

                    <!--  项目模板  -->
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="10"
                                Background="White"
                                BorderBrush="LightGray"
                                BorderThickness="0,0,0,1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40" />
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="180" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="80" />
                                        <ColumnDefinition Width="80" />
                                    </Grid.ColumnDefinitions>

                                    <!--  头像  -->
                                    <Border
                                        Grid.Column="0"
                                        Width="30"
                                        Height="30"
                                        VerticalAlignment="Center"
                                        Background="{Binding Background}"
                                        CornerRadius="15">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="10"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="{Binding FirstName}" />
                                    </Border>

                                    <!--  姓名和邮箱  -->
                                    <StackPanel
                                        Grid.Column="1"
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center">
                                        <TextBlock
                                            FontSize="14"
                                            FontWeight="Bold"
                                            Text="{Binding FullName}" />
                                        <TextBlock
                                            FontSize="11"
                                            Foreground="Gray"
                                            Text="{Binding Email}"
                                            TextTrimming="CharacterEllipsis" />
                                    </StackPanel>

                                    <!--  城市信息  -->
                                    <StackPanel
                                        Grid.Column="2"
                                        VerticalAlignment="Center">
                                        <TextBlock
                                            FontSize="12"
                                            FontWeight="SemiBold"
                                            Foreground="DarkBlue"
                                            Text="{Binding City}" />
                                        <TextBlock
                                            FontSize="10"
                                            Foreground="Gray"
                                            Text="{Binding Country}" />
                                    </StackPanel>

                                    <!--  年龄  -->
                                    <StackPanel
                                        Grid.Column="3"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="10"
                                            Foreground="Gray"
                                            Text="年龄" />
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="14"
                                            FontWeight="Bold"
                                            Text="{Binding Age}" />
                                    </StackPanel>

                                    <!--  状态  -->
                                    <Border
                                        Grid.Column="4"
                                        Padding="8,4"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        CornerRadius="10">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="Green" />
                                                <Style.Triggers>
                                                    <DataTrigger
                                                        Binding="{Binding Status}"
                                                        Value="Inactive">
                                                        <Setter Property="Background" Value="Red" />
                                                    </DataTrigger>
                                                    <DataTrigger
                                                        Binding="{Binding Status}"
                                                        Value="Pending">
                                                        <Setter Property="Background" Value="Orange" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock
                                            FontSize="10"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="{Binding Status}" />
                                    </Border>

                                    <!--  验证状态  -->
                                    <StackPanel
                                        Grid.Column="5"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                        <Border
                                            Width="20"
                                            Height="20"
                                            CornerRadius="10">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="Red" />
                                                    <Style.Triggers>
                                                        <DataTrigger
                                                            Binding="{Binding IsVerified}"
                                                            Value="True">
                                                            <Setter Property="Background" Value="Green" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                FontSize="10"
                                                FontWeight="Bold"
                                                Foreground="White">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="✗" />
                                                        <Style.Triggers>
                                                            <DataTrigger
                                                                Binding="{Binding IsVerified}"
                                                                Value="True">
                                                                <Setter Property="Text" Value="✓" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                        <TextBlock
                                            Margin="0,2,0,0"
                                            HorizontalAlignment="Center"
                                            FontSize="9"
                                            Foreground="Gray">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="未验证" />
                                                    <Style.Triggers>
                                                        <DataTrigger
                                                            Binding="{Binding IsVerified}"
                                                            Value="True">
                                                            <Setter Property="Text" Value="已验证" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>