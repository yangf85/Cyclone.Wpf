<UserControl
    x:Class="Cyclone.Wpf.Demo.Views.TabControlView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="800"
    d:DesignWidth="1000"
    mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!--  Top 示例 - 基础样式  -->
            <GroupBox
                Height="250"
                Margin="10"
                Header="TabStripPlacement=Top (基础样式)">
                <TabControl
                    ItemsSource="{Binding TabItems}"
                    SelectedItem="{Binding SelectedTab}"
                    TabStripPlacement="Top">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Header}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <Border Margin="10" Padding="20">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="18"
                                        FontWeight="Bold"
                                        Text="{Binding Title}" />
                                    <TextBlock
                                        Margin="0,10,0,0"
                                        Text="{Binding Description}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
            </GroupBox>

            <!--  Bottom 示例 - 带图标  -->
            <GroupBox
                Height="250"
                Margin="10"
                Header="TabStripPlacement=Bottom (带颜色图标)">
                <TabControl
                    ItemsSource="{Binding TabItems}"
                    SelectedItem="{Binding SelectedTab}"
                    TabStripPlacement="Bottom">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Ellipse
                                    Width="8"
                                    Height="8"
                                    Margin="0,0,5,0"
                                    Fill="{Binding IconColor}" />
                                <TextBlock Text="{Binding Header}" />
                            </StackPanel>
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <Border Margin="10" Padding="20">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="SemiBold"
                                        Text="{Binding Title}" />
                                    <TextBlock
                                        Margin="0,8,0,0"
                                        Foreground="#666"
                                        Text="{Binding Description}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
            </GroupBox>

            <!--  Left 示例 - 简洁样式  -->
            <GroupBox
                Height="250"
                Margin="10"
                Header="TabStripPlacement=Left (竖向排列)">
                <TabControl
                    ItemsSource="{Binding TabItems}"
                    SelectedItem="{Binding SelectedTab}"
                    TabStripPlacement="Left">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Header}" />
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <Border Margin="10" Padding="20">
                                <StackPanel>
                                    <TextBlock
                                        FontSize="20"
                                        FontWeight="Bold"
                                        Text="{Binding Title}" />
                                    <Rectangle
                                        Height="3"
                                        Margin="0,10"
                                        HorizontalAlignment="Left"
                                        Fill="{Binding IconColor}"
                                        Width="60" />
                                    <TextBlock
                                        FontSize="14"
                                        Text="{Binding Description}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
            </GroupBox>

            <!--  Right 示例 - 带图标和竖向文字  -->
            <GroupBox
                Height="250"
                Margin="10"
                Header="TabStripPlacement=Right (带图标的竖向排列)">
                <TabControl
                    ItemsSource="{Binding TabItems}"
                    SelectedItem="{Binding SelectedTab}"
                    TabStripPlacement="Right">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <Rectangle
                                    Width="24"
                                    Height="24"
                                    Margin="0,0,0,8"
                                    HorizontalAlignment="Center"
                                    Fill="{Binding IconColor}"
                                    RadiusX="4"
                                    RadiusY="4" />
                                <TextBlock
                                    FontSize="12"
                                    Text="{Binding Header}"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <Border
                                Margin="10"
                                Padding="20"
                                Background="#F8F9FA"
                                CornerRadius="4">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle
                                            Width="4"
                                            Height="24"
                                            Margin="0,0,10,0"
                                            Fill="{Binding IconColor}"
                                            RadiusX="2"
                                            RadiusY="2" />
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Text="{Binding Title}" />
                                    </StackPanel>
                                    <TextBlock
                                        Margin="0,12,0,0"
                                        FontSize="14"
                                        LineHeight="22"
                                        Text="{Binding Description}"
                                        TextWrapping="Wrap" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
            </GroupBox>

            <!--  混合示例 - 展示不同数据绑定方式  -->
            <GroupBox
                Height="250"
                Margin="10"
                Header="自定义内容布局">
                <TabControl
                    ItemsSource="{Binding TabItems}"
                    SelectedItem="{Binding SelectedTab}"
                    TabStripPlacement="Top">
                    <TabControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Padding="8,4"
                                Background="Transparent"
                                CornerRadius="4,4,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse
                                        Width="10"
                                        Height="10"
                                        Margin="0,0,6,0"
                                        Fill="{Binding IconColor}" />
                                    <TextBlock
                                        FontWeight="Medium"
                                        Text="{Binding Header}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </TabControl.ItemTemplate>
                    <TabControl.ContentTemplate>
                        <DataTemplate>
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Border
                                    Grid.Row="0"
                                    Padding="15,10"
                                    Background="{Binding IconColor}"
                                    CornerRadius="4,4,0,0">
                                    <TextBlock
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Foreground="White"
                                        Text="{Binding Title}" />
                                </Border>

                                <Border
                                    Grid.Row="1"
                                    Padding="15"
                                    Background="White"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1,0,1,1"
                                    CornerRadius="0,0,4,4">
                                    <TextBlock
                                        FontSize="13"
                                        Foreground="#555"
                                        LineHeight="20"
                                        Text="{Binding Description}"
                                        TextWrapping="Wrap" />
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </TabControl.ContentTemplate>
                </TabControl>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>