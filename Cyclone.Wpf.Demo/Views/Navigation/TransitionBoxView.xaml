<UserControl x:Class="Cyclone.Wpf.Demo.Views.Navigation.TransitionBoxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cy="https://www.cyclone/wpf"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Cyclone.Wpf.Demo.Views.Navigation"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <cy:TransitionBox x:Name="transitionBox">
            <!--<cy:TransitionBox.Transition>
         <cy:SlideTransition />
     </cy:TransitionBox.Transition>-->
            <Button Command="{Binding CascadePicker.GetCityCommand}" Content="Click Me" />
        </cy:TransitionBox>
        <Button Margin="0,150,0,0"
                Click="OnChangeContent"
                Content="Change Content" />
    </Grid>
</UserControl>