<UserControl x:Class="Cyclone.Wpf.Demo.Views.FluidTabControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cy="https://www.cyclone/wpf"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Cyclone.Wpf.Demo.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid Margin="15">
        <cy:FluidTabControl AnimationDuration="0:0:1"
                            FluidTabPlacement="Right"
                            HeaderWidth="120">
            <!--  社交媒体动态  -->
            <cy:FluidTabItem Header="社交动态">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Width="400" Margin="10">
                        <!--  用户信息  -->
                        <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                            <Ellipse Width="40" Height="40">
                                <!--<Ellipse.Fill>
                                    <ImageBrush ImageSource="/Assets/avatar_sample.jpg" />
                                </Ellipse.Fill>-->
                            </Ellipse>
                            <TextBlock Margin="10,0"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Text="科技观察者" />
                        </StackPanel>

                        <!--  动态内容  -->
                        <TextBlock Margin="0,0,0,10" TextWrapping="Wrap">
                            最新科技趋势：量子计算领域取得突破性进展，新型量子芯片运算速度提升100倍！
                        </TextBlock>

                        <!--  互动统计  -->
                        <Grid Margin="0,0,0,10">
                            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                <Button Content="❤"
                                        Foreground="Red"
                                        ToolTip="点赞" />
                                <Button Margin="10,0"
                                        Content="💬"
                                        ToolTip="评论" />
                                <Button Content="↻" ToolTip="转发" />
                            </StackPanel>
                        </Grid>

                        <!--  图片预览  -->
                        <Image Height="300"
                               Source="/Assets/Girl.jpg"
                               Stretch="UniformToFill" />
                    </StackPanel>
                </ScrollViewer>
            </cy:FluidTabItem>

            <!--  数据仪表盘  -->
            <cy:FluidTabItem Header="数据分析">
                <Grid Height="350" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  数据筛选  -->
                    <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                        <ComboBox Width="120" SelectedIndex="0">
                            <ComboBoxItem>本月数据</ComboBoxItem>
                            <ComboBoxItem>季度数据</ComboBoxItem>
                            <ComboBoxItem>年度数据</ComboBoxItem>
                        </ComboBox>
                        <DatePicker Width="150" Margin="10,0" />
                    </StackPanel>


                </Grid>
            </cy:FluidTabItem>

            <!--  商品列表  -->
            <cy:FluidTabItem Header="商品列表">
                <VirtualizingStackPanel>
                    <ItemsControl ItemsSource="{Binding Products}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="5"
                                        Padding="10"
                                        Background="White"
                                        BorderBrush="#EEE"
                                        BorderThickness="1"
                                        CornerRadius="5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Image Height="80"
                                               Source="{Binding Thumbnail}"
                                               Stretch="UniformToFill" />

                                        <StackPanel Grid.Column="1" Margin="10,0">
                                            <TextBlock FontWeight="Bold" Text="{Binding Name}" />
                                            <TextBlock MaxWidth="300"
                                                       Foreground="#666"
                                                       Text="{Binding Description}"
                                                       TextWrapping="Wrap" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                            <TextBlock FontSize="16"
                                                       Foreground="Red"
                                                       Text="{Binding Price}" />
                                            <Button Margin="0,5"
                                                    Command="{Binding AddToCartCommand}"
                                                    Content="加入购物车" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </VirtualizingStackPanel>
            </cy:FluidTabItem>

            <!--  实时监控  -->
            <cy:FluidTabItem Header="实时监控">
                <Grid Height="350" Background="LightGreen">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  状态指示  -->
                    <StackPanel Margin="10" Orientation="Horizontal">
                        <Ellipse Width="12"
                                 Height="12"
                                 VerticalAlignment="Center"
                                 Fill="LimeGreen" />
                        <TextBlock Margin="5,0"
                                   VerticalAlignment="Center"
                                   Text=" 运行中" />
                        <TextBlock Margin="20,0" Text="CPU使用率：" />
                        <ProgressBar Width="200"
                                     Height="20"
                                     Margin="5,0"
                                     IsIndeterminate="{Binding IsLoading}"
                                     Value="{Binding CpuUsage}" />
                    </StackPanel>

                    <!--  日志面板  -->
                    <Border Grid.Row="1"
                            Margin="10"
                            Background="#333"
                            CornerRadius="5">
                        <ScrollViewer VerticalScrollBarVisibility="Visible">
                            <ItemsControl ItemsSource="{Binding LogEntries}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Margin="5"
                                                   FontFamily="Consolas"
                                                   FontSize="12"
                                                   Foreground="White"
                                                   Text="{Binding}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </cy:FluidTabItem>

            <!--  多媒体中心  -->
            <cy:FluidTabItem Header="多媒体">
                <Grid Height="350" Background="LightCyan">


                    <!--  播放控制  -->
                    <StackPanel Margin="10"
                                VerticalAlignment="Bottom"
                                Orientation="Horizontal">
                        <Button Width="40"
                                Command="{Binding PlayCommand}"
                                Content="▶" />
                        <Slider Width="120"
                                Margin="10,0"
                                Maximum="100"
                                Minimum="0"
                                Value="{Binding Volume}" />
                        <TextBlock MinWidth="60"
                                   VerticalAlignment="Center"
                                   Text="{Binding CurrentTime}" />
                    </StackPanel>
                </Grid>
            </cy:FluidTabItem>
        </cy:FluidTabControl>
    </Grid>
</UserControl>