<cy:AdvancedWindow
    x:Class="Cyclone.Wpf.Demo.ShellWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cy="https://www.cyclone/wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cyclone.Wpf.Demo"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Cyclone.Wpf.Demo.ViewModels"
    Title="MainWindow"
    Width="1080"
    Height="720"
    d:DataContext="{d:DesignInstance Type=vm:ShellWindowViewModel}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <cy:AdvancedWindow.FunctionalZone>
        <cy:SplitButton
            Height="{Binding Path=CaptionHeight, RelativeSource={RelativeSource AncestorType=cy:AdvancedWindow}}"
            HorizontalAlignment="Right"
            BorderThickness="0"
            Label="SwitchTheme"
            WindowChrome.IsHitTestVisibleInChrome="True">
            <cy:SplitButtonItem Command="{Binding SwitchThemeCommand}" CommandParameter="{Binding Path=Content, RelativeSource={RelativeSource Mode=Self}}" Content="Basic" />
            <cy:SplitButtonItem Command="{Binding SwitchThemeCommand}" CommandParameter="{Binding Path=Content, RelativeSource={RelativeSource Mode=Self}}" Content="Light" />
            <cy:SplitButtonItem Command="{Binding SwitchThemeCommand}" CommandParameter="{Binding Path=Content, RelativeSource={RelativeSource Mode=Self}}" Content="Dark" />
        </cy:SplitButton>
    </cy:AdvancedWindow.FunctionalZone>
    <Grid>
        <local:MainView />
    </Grid>
</cy:AdvancedWindow>